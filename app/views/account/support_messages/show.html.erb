<div class="min-h-screen bg-gray-50 pt-20">
  <!-- Page Header -->
  <div class="bg-white border-b border-gray-200 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3">
        <%= link_to account_support_messages_path, class: "text-gray-600 hover:text-gray-900" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        <div class="flex-1">
          <h1 class="text-2xl font-bold text-gray-900">Support Conversation</h1>
          <p class="mt-1 text-sm text-gray-600">
            Started <%= time_ago_in_words(@conversation.created_at) %> ago
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Conversation Thread -->
    <div class="space-y-4 mb-6">
      <% @messages.each do |message| %>
        <div class="<%= message.is_admin_response? ? 'bg-purple-50 border-purple-200' : 'bg-white border-gray-200' %> border rounded-lg p-6">
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full <%= message.is_admin_response? ? 'bg-purple-600' : 'bg-gray-400' %> flex items-center justify-center text-white font-medium">
                <% if message.is_admin_response? %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                <% else %>
                  <%= message.user.first_name[0].upcase %>
                <% end %>
              </div>
              <div>
                <p class="font-medium <%= message.is_admin_response? ? 'text-purple-900' : 'text-gray-900' %>">
                  <%= message.is_admin_response? ? 'Support Team' : message.user.full_name %>
                </p>
                <p class="text-sm text-gray-500">
                  <%= message.created_at.strftime('%B %d, %Y at %I:%M %p') %>
                </p>
              </div>
            </div>
            <% if message.unread? && message.is_admin_response? %>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                New
              </span>
            <% end %>
          </div>
          <div class="ml-13 text-gray-700 whitespace-pre-wrap">
            <%= message.message %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Reply Form -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Reply to this conversation</h3>
      <%= form_with model: @new_message, url: account_support_messages_path, local: true do |f| %>
        <%= f.hidden_field :parent_id, value: @conversation.id %>

        <% if @new_message.errors.any? %>
          <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="text-red-800 font-medium mb-2">
              <%= pluralize(@new_message.errors.count, "error") %> prohibited this reply from being sent:
            </h3>
            <ul class="list-disc list-inside text-red-700 text-sm">
              <% @new_message.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.text_area :message, rows: 6, placeholder: "Type your reply...", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 resize-none" %>
          <p class="mt-2 text-sm text-gray-500">Maximum 2000 characters</p>
        </div>

        <div class="flex items-center justify-end">
          <%= f.submit "Send Reply", class: "px-6 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 font-medium cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
