<div class="min-h-screen bg-gray-50" data-controller="npi-lookup">
  <!-- Page Header -->
  <div class="bg-white border-b border-gray-200 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold text-gray-900">Profile Settings</h1>
      <p class="mt-2 text-gray-600">Manage your account information and preferences</p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%= form_with(url: account_profile_path, method: :patch, local: true, class: "space-y-8", as: :user, scope: :user) do |form| %>
      <% if @user.errors.any? %>
        <div class="rounded-lg bg-red-50 border border-red-200 p-4">
          <h2 class="text-sm font-medium text-red-900 mb-2">
            <%= pluralize(@user.errors.count, "error") %> prevented this profile from being saved:
          </h2>
          <ul class="list-disc list-inside text-sm text-red-700">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Personal Information -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Personal Information</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :first_name,
              data: { "npi-lookup-target": "firstNameInput" },
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
          </div>

          <div>
            <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :last_name,
              data: { "npi-lookup-target": "lastNameInput" },
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
          </div>

          <div class="md:col-span-2">
            <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, disabled: true, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg bg-gray-50 text-gray-500 cursor-not-allowed" %>
            <p class="text-xs text-gray-500 mt-1">Email cannot be changed</p>
          </div>
        </div>
      </div>

      <!-- Professional Information -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Professional Information</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :npi, "NPI (National Provider Identifier)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="flex gap-2">
              <%= form.text_field :npi,
                maxlength: 10,
                pattern: "[0-9]{10}",
                placeholder: "1234567890",
                data: { "npi-lookup-target": "npiInput" },
                class: "flex-1 px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
              <button type="button"
                data-action="click->npi-lookup#performLookup"
                data-npi-lookup-target="lookupButton"
                class="px-4 py-2.5 bg-purple-600 text-white rounded-lg text-sm font-medium hover:bg-purple-700 transition-colors cursor-pointer whitespace-nowrap">
                Verify NPI
              </button>
            </div>
            <p class="text-xs text-gray-500 mt-1">10-digit NPI number - Click Verify to auto-populate from NPI Registry</p>
          </div>

          <div>
            <%= form.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.telephone_field :phone,
              placeholder: "+1 (555) 123-4567",
              data: { "npi-lookup-target": "phoneInput" },
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
            <p class="text-xs text-gray-500 mt-1">Contact phone number</p>
          </div>

          <div>
            <%= form.label :title, "Professional Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :title,
              placeholder: "e.g., President, Chief Medical Officer",
              data: { "npi-lookup-target": "titleInput" },
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
            <p class="text-xs text-gray-500 mt-1">Your professional title or position</p>
          </div>

          <div>
            <%= form.label :official_credentials, "Credentials", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :official_credentials,
              placeholder: "e.g., M.D., M.B.A., Ph.D.",
              data: { "npi-lookup-target": "credentialsInput" },
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
            <p class="text-xs text-gray-500 mt-1">Professional credentials and certifications</p>
          </div>

          <div class="md:col-span-2">
            <div class="flex items-center justify-between mb-2">
              <label class="block text-sm font-medium text-gray-700">NPI Status</label>
            </div>
            <div data-npi-lookup-target="npiStatus">
              <% if @user.npi_verified? %>
                <div class="flex items-center gap-2 p-3 bg-green-50 border border-green-200 rounded-lg">
                  <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <p class="text-sm font-medium text-green-900">NPI Verified</p>
                    <p class="text-xs text-green-700">
                      Verified on <%= @user.npi_verified_at.strftime("%B %d, %Y") %>
                      <% if @user.npi_enumeration_type.present? %>
                        (<%= @user.individual_npi? ? "Individual Provider" : "Organization" %>)
                      <% end %>
                    </p>
                  </div>
                </div>
              <% else %>
                <div class="flex items-center gap-2 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                  <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <p class="text-sm font-medium text-yellow-900">Not Verified Yet</p>
                </div>
              <% end %>
            </div>
            <div class="mt-2" data-npi-lookup-target="statusMessage"></div>
          </div>
        </div>
      </div>

      <!-- Address Information -->
      <% if @user.mailing_address.present? || @user.practice_address.present? || @user.location_address.present? %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Address Information</h2>
          <p class="text-sm text-gray-600 mb-4">Information retrieved from NPI Registry</p>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% if @user.mailing_address.present? %>
              <div>
                <h3 class="text-sm font-medium text-gray-700 mb-2">Mailing Address</h3>
                <div class="text-sm text-gray-600 whitespace-pre-line"><%= @user.formatted_mailing_address %></div>
                <% if @user.mailing_address["telephone_number"].present? %>
                  <p class="text-sm text-gray-500 mt-2">Tel: <%= @user.mailing_address["telephone_number"] %></p>
                <% end %>
              </div>
            <% end %>

            <% if @user.practice_address.present? %>
              <div>
                <h3 class="text-sm font-medium text-gray-700 mb-2">Practice Address</h3>
                <div class="text-sm text-gray-600 whitespace-pre-line"><%= @user.formatted_practice_address %></div>
                <% if @user.practice_address["telephone_number"].present? %>
                  <p class="text-sm text-gray-500 mt-2">Tel: <%= @user.practice_address["telephone_number"] %></p>
                <% end %>
              </div>
            <% end %>

            <% if @user.location_address.present? %>
              <div>
                <h3 class="text-sm font-medium text-gray-700 mb-2">Location Address</h3>
                <div class="text-sm text-gray-600 whitespace-pre-line"><%= @user.formatted_location_address %></div>
                <% if @user.location_address["telephone_number"].present? %>
                  <p class="text-sm text-gray-500 mt-2">Tel: <%= @user.location_address["telephone_number"] %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Notification Preferences -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Notification Preferences</h2>

        <div class="space-y-4">
          <div class="flex items-center">
            <%= form.check_box :notification_email, class: "w-4 h-4 text-cyan-600 focus:ring-cyan-500 border-gray-300 rounded" %>
            <label for="user_notification_email" class="ml-3">
              <span class="text-sm font-medium text-gray-700">Email Notifications</span>
              <p class="text-sm text-gray-500">Receive email updates about your credentials and alerts</p>
            </label>
          </div>

          <div class="flex items-center">
            <%= form.check_box :notification_sms, class: "w-4 h-4 text-cyan-600 focus:ring-cyan-500 border-gray-300 rounded" %>
            <label for="user_notification_sms" class="ml-3">
              <span class="text-sm font-medium text-gray-700">SMS Notifications</span>
              <p class="text-sm text-gray-500">Receive SMS updates for critical alerts (Pro plan required)</p>
            </label>
          </div>
        </div>
      </div>

      <!-- Avatar Upload -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Profile Photo</h2>

        <div class="flex items-center space-x-6">
          <div class="flex-shrink-0">
            <div class="w-20 h-20 rounded-lg bg-gray-200 flex items-center justify-center overflow-hidden">
              <% if @user.avatar.attached? && @user.avatar.blob.persisted? %>
                <%= image_tag @user.avatar, alt: @user.full_name, class: "w-20 h-20 object-cover" %>
              <% else %>
                <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
          </div>

          <div class="flex-1">
            <%= form.file_field :avatar, accept: "image/*", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-cyan-50 file:text-cyan-600 hover:file:bg-cyan-100" %>
            <p class="text-sm text-gray-500 mt-2">JPG, PNG, GIF up to 5MB</p>
          </div>
        </div>
      </div>

      <!-- Save Button -->
      <div class="flex justify-end gap-4">
        <%= link_to "Cancel", authenticated_root_path, class: "px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition" %>
        <%= form.submit "Save Changes", class: "px-6 py-2.5 bg-cyan-600 text-white rounded-lg font-medium hover:bg-cyan-700 transition cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
