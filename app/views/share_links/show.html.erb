<div class="min-h-screen bg-gradient-to-br from-purple-50 to-blue-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-gradient-to-br from-purple-100 to-blue-100 rounded-lg flex items-center justify-center">
            <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h1 class="text-xl font-bold text-gray-900">Shared Credential</h1>
            <p class="text-sm text-gray-500">View-only access</p>
          </div>
        </div>
      </div>

      <!-- Warning for one-time access -->
      <% if @share_link.one_time? %>
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex items-start">
            <svg class="h-5 w-5 text-yellow-600 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <div class="text-sm text-yellow-800">
              <p class="font-medium">One-Time Access Link</p>
              <p class="mt-1">This link will expire after you leave this page. Make sure to save any information you need.</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Credential Details -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Credential Details</h2>

      <dl class="grid grid-cols-1 gap-6">
        <!-- Title -->
        <div>
          <dt class="text-sm font-medium text-gray-500 mb-1">Title</dt>
          <dd class="text-base text-gray-900"><%= @credential.title %></dd>
        </div>

        <!-- Status -->
        <div>
          <dt class="text-sm font-medium text-gray-500 mb-1">Status</dt>
          <dd><%= render 'shared/status_badge', status: @credential.status %></dd>
        </div>

        <!-- Start Date -->
        <% if @credential.start_date.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 mb-1">Start Date</dt>
            <dd class="text-base text-gray-900"><%= @credential.start_date.strftime("%B %d, %Y") %></dd>
          </div>
        <% end %>

        <!-- End Date -->
        <% if @credential.end_date.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 mb-1">End Date</dt>
            <dd class="text-base text-gray-900"><%= @credential.end_date.strftime("%B %d, %Y") %></dd>
          </div>
        <% end %>

        <!-- Notes -->
        <% if @credential.notes.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 mb-1">Notes</dt>
            <dd class="text-base text-gray-900 whitespace-pre-wrap"><%= @credential.notes %></dd>
          </div>
        <% end %>

        <!-- Tags -->
        <% if @credential.tags.any? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 mb-2">Tags</dt>
            <dd class="flex flex-wrap gap-2">
              <% @credential.tags.each do |tag| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  <%= tag.name %>
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>

    <!-- Footer -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex items-start">
        <svg class="h-5 w-5 text-blue-600 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        <div class="text-sm text-blue-800">
          <p class="font-medium">Shared with you via MediVault</p>
          <p class="mt-1">This credential has been securely shared with you. The information shown here is read-only.</p>
        </div>
      </div>
    </div>
  </div>
</div>
