<nav class="bg-white shadow-lg fixed top-0 left-0 right-0 z-50" data-controller="mobile-menu">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo and primary navigation -->
      <div class="flex">
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center">
          <%= link_to authenticated_root_path, class: "flex items-center" do %>
            <span class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent">
              MediVault
            </span>
          <% end %>
        </div>

        <!-- Primary Navigation -->
        <div class="hidden sm:ml-8 sm:flex sm:space-x-8">
          <%= link_to "Dashboard", authenticated_root_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(authenticated_root_path) ? 'text-purple-600 border-b-2 border-purple-600' : 'text-gray-700 hover:text-purple-600 hover:border-gray-300 border-b-2 border-transparent transition'}" %>

          <%= link_to "Credentials", credentials_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(credentials_path) ? 'text-purple-600 border-b-2 border-purple-600' : 'text-gray-700 hover:text-purple-600 hover:border-gray-300 border-b-2 border-transparent transition'}" %>

          <%= link_to "Alerts", alerts_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(alerts_path) ? 'text-purple-600 border-b-2 border-purple-600' : 'text-gray-700 hover:text-purple-600 hover:border-gray-300 border-b-2 border-transparent transition'}" %>

          <% if current_user.admin? %>
            <%= link_to "Admin", admin_root_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(admin_root_path) ? 'text-purple-600 border-b-2 border-purple-600' : 'text-gray-700 hover:text-purple-600 hover:border-gray-300 border-b-2 border-transparent transition'}" %>
          <% end %>
        </div>
      </div>

      <!-- Right side menu -->
      <div class="flex items-center">
        <!-- Plan Badge -->
        <div class="hidden sm:block mr-4">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= current_user.pro? ? 'bg-purple-100 text-purple-800' : current_user.basic? ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
            <%= current_plan_name %>
          </span>
        </div>

        <!-- User dropdown -->
        <div class="relative" data-controller="dropdown">
          <button type="button" data-action="click->dropdown#toggle" class="flex items-center text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
            <span class="sr-only">Open user menu</span>
            <div class="h-8 w-8 rounded-full bg-gradient-to-r from-purple-600 to-blue-600 flex items-center justify-center text-white font-semibold">
              <%= current_user.first_name[0].upcase %><%= current_user.last_name[0].upcase %>
            </div>
            <span class="hidden sm:block ml-2 text-gray-700 font-medium"><%= current_user.full_name %></span>
            <svg class="hidden sm:block ml-1 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>

          <!-- Dropdown menu -->
          <div data-dropdown-target="menu" class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100 z-50">
            <div class="py-1">
              <%= link_to account_profile_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition" do %>
                <span>Profile</span>
              <% end %>
              <%= link_to account_subscription_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition" do %>
                <span>Subscription</span>
              <% end %>
            </div>
            <div class="py-1">
              <%= button_to destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-red-700 hover:bg-red-50 transition" do %>
                <span>Sign out</span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Mobile menu button -->
        <button type="button" data-action="click->mobile-menu#toggle" class="sm:hidden ml-4 inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-purple-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-purple-500">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="hidden" data-mobile-menu-target="menu">
      <div class="pt-2 pb-3 space-y-1">
        <%= link_to "Dashboard", authenticated_root_path, class: "block pl-3 pr-4 py-2 text-base font-medium #{current_page?(authenticated_root_path) ? 'bg-purple-50 border-l-4 border-purple-600 text-purple-700' : 'text-gray-700 hover:bg-gray-50 hover:border-gray-300 border-l-4 border-transparent'}" %>

        <%= link_to "Credentials", credentials_path, class: "block pl-3 pr-4 py-2 text-base font-medium #{current_page?(credentials_path) ? 'bg-purple-50 border-l-4 border-purple-600 text-purple-700' : 'text-gray-700 hover:bg-gray-50 hover:border-gray-300 border-l-4 border-transparent'}" %>

        <%= link_to "Alerts", alerts_path, class: "block pl-3 pr-4 py-2 text-base font-medium #{current_page?(alerts_path) ? 'bg-purple-50 border-l-4 border-purple-600 text-purple-700' : 'text-gray-700 hover:bg-gray-50 hover:border-gray-300 border-l-4 border-transparent'}" %>

        <% if current_user.admin? %>
          <%= link_to "Admin", admin_root_path, class: "block pl-3 pr-4 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:border-gray-300 border-l-4 border-transparent" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
