<div data-controller="chat-widget" class="fixed bottom-6 right-6 z-50">
  <!-- Chat Widget Window -->
  <div data-chat-widget-target="widget" class="hidden mb-4 bg-white rounded-lg shadow-2xl w-96 max-w-[calc(100vw-3rem)]">
    <!-- Header -->
    <div class="bg-gradient-to-r from-purple-600 to-blue-600 text-white px-6 py-4 rounded-t-lg flex justify-between items-center">
      <div>
        <h3 class="font-semibold text-lg">Support Chat</h3>
        <p class="text-xs text-purple-100">We're here to help!</p>
      </div>
      <button data-action="click->chat-widget#toggle" class="text-white hover:text-gray-200 transition">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Messages Container -->
    <div class="h-96 overflow-y-auto p-4 bg-gray-50" data-chat-widget-target="messages">
      <!-- Greeting Message (shown when no messages) -->
      <div data-chat-widget-target="greeting" class="text-center py-8">
        <div class="mb-4">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full text-white text-2xl font-bold">
            <%= current_user.first_name[0].upcase %><%= current_user.last_name[0].upcase %>
          </div>
        </div>
        <h4 class="text-xl font-semibold text-gray-900 mb-2">
          <%
            hour = Time.current.hour
            greeting = if hour < 12
              "Good Morning"
            elsif hour < 18
              "Good Afternoon"
            else
              "Good Evening"
            end
          %>
          <%= greeting %>, <%= current_user.first_name %>!
        </h4>
        <p class="text-gray-600">What do you need help with today?</p>
      </div>

      <!-- Messages will be dynamically loaded here -->
    </div>

    <!-- Input Area -->
    <div class="border-t border-gray-200 p-4 bg-white rounded-b-lg">
      <form data-action="submit->chat-widget#sendMessage">
        <div class="flex gap-2">
          <input
            type="text"
            data-chat-widget-target="input"
            placeholder="Type your message..."
            class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
          />
          <button
            type="submit"
            class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Floating Button -->
  <button
    data-action="click->chat-widget#toggle"
    class="bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-full p-4 shadow-lg hover:shadow-xl transition-all hover:scale-110"
    title="Open Support Chat"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
    <% unread_count = SupportMessage.unread_count_for_user(current_user) %>
    <% if unread_count > 0 %>
      <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs font-bold rounded-full h-6 w-6 flex items-center justify-center">
        <%= unread_count %>
      </span>
    <% end %>
  </button>
</div>
