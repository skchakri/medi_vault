<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">User Management</h1>
      <p class="mt-2 text-gray-600">Manage user accounts and permissions</p>
    </div>

    <!-- Users Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
              User
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
              Contact
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
              Credentials
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
              AI Tokens
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
              Plan
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">
              Role
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <tr class="hover:bg-gray-50">
              <!-- User Column with Avatar/Initials -->
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <% if user.avatar.attached? && user.avatar.blob.persisted? %>
                      <%= image_tag user.avatar, alt: user.full_name, class: "h-10 w-10 rounded-full object-cover" %>
                    <% else %>
                      <div class="h-10 w-10 rounded-full bg-gradient-to-r from-purple-600 to-blue-600 flex items-center justify-center text-white font-semibold">
                        <%= user.first_name[0].upcase %><%= user.last_name[0].upcase %>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to user.full_name, admin_user_path(user), class: "hover:text-purple-600" %>
                    </div>
                    <div class="text-sm text-gray-500">
                      Joined <%= user.created_at.strftime('%b %d, %Y') %>
                    </div>
                  </div>
                </div>
              </td>

              <!-- Contact Column -->
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900"><%= user.email %></div>
                <div class="text-sm text-gray-500">
                  <%= user.phone.present? ? user.phone : 'No phone' %>
                </div>
              </td>

              <!-- Credentials Column with Link -->
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to admin_user_path(user), class: "text-sm font-medium text-purple-600 hover:text-purple-900" do %>
                  <%= user.credentials_count %> <%= 'credential'.pluralize(user.credentials_count) %>
                <% end %>
              </td>

              <!-- AI Tokens Column -->
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= number_with_delimiter(user.llm_requests.sum(:total_tokens)) %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= user.llm_requests.count %> requests
                </div>
              </td>

              <!-- Plan Column -->
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= user.pro? ? 'bg-purple-100 text-purple-800' : user.basic? ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= user.plan.titleize %>
                </span>
              </td>

              <!-- Role Column -->
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= user.admin? ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
                  <%= user.role.titleize %>
                </span>
              </td>

              <!-- Actions Column -->
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end space-x-2">
                  <%= link_to "Edit", edit_admin_user_path(user), class: "px-3 py-1.5 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition text-xs font-medium" %>
                  <%= button_to "Reset Password", send_password_reset_admin_user_path(user), method: :post, class: "px-3 py-1.5 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition text-xs font-medium cursor-pointer", form: { style: 'display: inline;' } %>
                  <%= button_to "Toggle Admin", toggle_admin_admin_user_path(user), method: :patch, class: "px-3 py-1.5 bg-yellow-600 text-white rounded-md hover:bg-yellow-700 transition text-xs font-medium cursor-pointer", form: { style: 'display: inline;' } %>
                  <% unless user == current_user %>
                    <%= button_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete #{user.full_name}?" }, class: "px-3 py-1.5 bg-red-600 text-white rounded-md hover:bg-red-700 transition text-xs font-medium cursor-pointer", form: { style: 'display: inline;' } %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @users.respond_to?(:total_pages) && @users.total_pages > 1 %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          Showing <%= @users.offset_value + 1 %> to <%= [@users.offset_value + @users.size, @users.total_count].min %> of <%= @users.total_count %> users
        </div>
        <div class="flex space-x-2">
          <%= paginate @users, theme: 'twitter-bootstrap-4' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
