<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <% if @user.avatar.attached? && @user.avatar.blob.persisted? %>
            <%= image_tag @user.avatar, alt: @user.full_name, class: "h-20 w-20 rounded-full object-cover" %>
          <% else %>
            <div class="h-20 w-20 rounded-full bg-gradient-to-r from-purple-600 to-blue-600 flex items-center justify-center text-white font-bold text-2xl">
              <%= @user.first_name[0].upcase %><%= @user.last_name[0].upcase %>
            </div>
          <% end %>
          <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= @user.full_name %></h1>
            <p class="mt-1 text-gray-600"><%= @user.email %></p>
          </div>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Edit User", edit_admin_user_path(@user), class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition" %>
          <%= link_to "Back to Users", admin_users_path, class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" %>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Total Credentials</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @user.credentials_count %></p>
          </div>
          <div class="p-3 bg-blue-100 rounded-lg">
            <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">AI Tokens Used</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_tokens) %></p>
          </div>
          <div class="p-3 bg-purple-100 rounded-lg">
            <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Plan</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @user.plan.titleize %></p>
          </div>
          <div class="p-3 bg-green-100 rounded-lg">
            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Role</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @user.role.titleize %></p>
          </div>
          <div class="p-3 bg-yellow-100 rounded-lg">
            <svg class="h-8 w-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- User Details -->
    <div class="bg-white rounded-lg shadow mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">User Details</h2>
      </div>
      <div class="px-6 py-4">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <dt class="text-sm font-medium text-gray-500">Phone</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user.phone.present? ? @user.phone : 'Not provided' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">NPI</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user.npi.present? ? @user.npi : 'Not provided' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Email Notifications</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user.notification_email? ? 'Enabled' : 'Disabled' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">SMS Notifications</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user.notification_sms? ? 'Enabled' : 'Disabled' %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Account Created</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime('%B %d, %Y at %I:%M %p') %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Last Sign In</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user.last_sign_in_at ? @user.last_sign_in_at.strftime('%B %d, %Y at %I:%M %p') : 'Never' %></dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Credentials List -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Credentials (<%= @credentials.count %>)</h2>
      </div>
      <% if @credentials.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Title</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Start Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">End Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Alerts</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @credentials.each do |credential| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900"><%= credential.title %></div>
                    <div class="text-sm text-gray-500"><%= truncate(credential.notes, length: 50) if credential.notes %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% status_color = case credential.status
                        when 'expired' then 'bg-red-100 text-red-800'
                        when 'expiring_soon' then 'bg-yellow-100 text-yellow-800'
                        when 'active' then 'bg-green-100 text-green-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full <%= status_color %>">
                      <%= credential.status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= credential.start_date&.strftime('%b %d, %Y') || 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= credential.end_date&.strftime('%b %d, %Y') || 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= credential.alerts.count %> alerts
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="px-6 py-12 text-center">
          <p class="text-gray-500">No credentials found for this user.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
