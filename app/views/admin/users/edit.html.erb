<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Edit User Profile</h1>
          <p class="mt-2 text-gray-600">Update user information and settings</p>
        </div>
        <%= link_to "Back to Users", admin_users_path, class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition" %>
      </div>
    </div>

    <!-- Edit Form -->
    <div class="bg-white rounded-lg shadow p-8">
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true, class: "space-y-6" do |f| %>
        <% if @user.errors.any? %>
          <div class="rounded-lg bg-red-50 border border-red-200 p-4">
            <h2 class="text-sm font-medium text-red-900 mb-2">
              <%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:
            </h2>
            <ul class="list-disc list-inside text-sm text-red-700">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Personal Information -->
        <div class="space-y-4">
          <h3 class="text-lg font-medium text-gray-900">Personal Information</h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            </div>

            <div>
              <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            </div>
          </div>

          <div>
            <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <div>
            <%= f.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.telephone_field :phone, placeholder: "+1 (555) 123-4567", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <div>
            <%= f.label :npi, "NPI (National Provider Identifier)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :npi, maxlength: 10, pattern: "[0-9]{10}", placeholder: "1234567890", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            <p class="mt-1 text-sm text-gray-500">10-digit NPI number</p>
          </div>
        </div>

        <!-- Account Settings -->
        <div class="space-y-4 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Account Settings</h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :plan, "Plan", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.select :plan, options_for_select([['Free', 'free'], ['Basic', 'basic'], ['Pro', 'pro']], @user.plan), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            </div>

            <div>
              <%= f.label :role, "Role", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.select :role, options_for_select([['User', 'user'], ['Admin', 'admin']], @user.role), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            </div>
          </div>
        </div>

        <!-- Notification Preferences -->
        <div class="space-y-4 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Notification Preferences</h3>

          <div class="space-y-3">
            <div class="flex items-center">
              <%= f.check_box :notification_email, class: "w-4 h-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
              <label for="user_notification_email" class="ml-3">
                <span class="text-sm font-medium text-gray-700">Email Notifications</span>
                <p class="text-sm text-gray-500">Receive email updates about credentials and alerts</p>
              </label>
            </div>

            <div class="flex items-center">
              <%= f.check_box :notification_sms, class: "w-4 h-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
              <label for="user_notification_sms" class="ml-3">
                <span class="text-sm font-medium text-gray-700">SMS Notifications</span>
                <p class="text-sm text-gray-500">Receive SMS updates for critical alerts</p>
              </label>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex justify-end gap-3 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", admin_user_path(@user), class: "px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition" %>
          <%= f.submit "Save Changes", class: "px-6 py-2.5 bg-purple-600 text-white rounded-lg font-medium hover:bg-purple-700 transition cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
