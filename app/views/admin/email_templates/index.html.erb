<div class="min-h-screen bg-gray-50 pt-20">
  <!-- Page Header -->
  <div class="bg-white border-b border-gray-200 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Email Templates</h1>
        <p class="mt-2 text-gray-600">Manage system email templates and customize content</p>
      </div>
      <%= link_to "Create Template", new_admin_email_template_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <% if @email_templates.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @email_templates.each do |template| %>
          <div class="bg-white rounded-lg shadow hover:shadow-lg transition">
            <div class="p-6 border-b border-gray-200">
              <div class="flex items-start justify-between">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900"><%= template.name %></h3>
                  <p class="text-sm text-gray-600 mt-1"><%= template.template_type.humanize %></p>
                </div>
                <span class="px-3 py-1 text-xs font-medium rounded-full <%= template.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= template.active? ? 'Active' : 'Inactive' %>
                </span>
              </div>
            </div>

            <div class="p-6">
              <p class="text-sm text-gray-600 mb-4">
                <strong>Subject:</strong> <%= template.subject %>
              </p>

              <% if template.variables.present? %>
                <div class="mb-4">
                  <p class="text-sm font-medium text-gray-700 mb-2">Variables:</p>
                  <div class="flex flex-wrap gap-2">
                    <% template.variables.each do |var| %>
                      <span class="px-2 py-1 text-xs bg-gray-100 text-gray-700 rounded">{{<%= var %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <div class="flex gap-2 mt-6">
                <%= link_to "Edit", edit_admin_email_template_path(template), class: "flex-1 px-3 py-2 text-center text-sm bg-blue-100 text-blue-700 rounded hover:bg-blue-200 transition" %>
                <%= link_to "View", admin_email_template_path(template), class: "flex-1 px-3 py-2 text-center text-sm bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition" %>
                <%= link_to "Delete", admin_email_template_path(template), method: :delete, data: { confirm: "Are you sure?" }, class: "flex-1 px-3 py-2 text-center text-sm bg-red-100 text-red-700 rounded hover:bg-red-200 transition" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900">No email templates</h3>
        <p class="text-gray-600 mt-2">Create your first email template to get started</p>
        <%= link_to "Create Template", new_admin_email_template_path, class: "inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
      </div>
    <% end %>
  </div>
</div>
