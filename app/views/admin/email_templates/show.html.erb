<div class="min-h-screen bg-gray-50 pt-20">
  <!-- Page Header -->
  <div class="bg-white border-b border-gray-200 py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
      <div class="flex items-center gap-3">
        <%= link_to admin_email_templates_path, class: "text-gray-600 hover:text-gray-900" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @email_template.name %></h1>
          <p class="mt-2 text-gray-600"><%= @email_template.template_type.humanize %></p>
        </div>
      </div>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_admin_email_template_path(@email_template), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
        <%= link_to "Delete", admin_email_template_path(@email_template), method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition" %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Template Details -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <!-- Details Panel -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Template Details</h2>

          <div class="space-y-4">
            <div>
              <p class="text-sm text-gray-600">Name</p>
              <p class="text-sm font-medium text-gray-900"><%= @email_template.name %></p>
            </div>

            <div>
              <p class="text-sm text-gray-600">Type</p>
              <p class="text-sm font-medium text-gray-900"><%= @email_template.template_type.humanize %></p>
            </div>

            <div>
              <p class="text-sm text-gray-600">Status</p>
              <span class="inline-flex mt-1 px-3 py-1 text-xs font-medium rounded-full <%= @email_template.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= @email_template.active? ? 'Active' : 'Inactive' %>
              </span>
            </div>

            <div>
              <p class="text-sm text-gray-600">Created</p>
              <p class="text-sm font-medium text-gray-900"><%= @email_template.created_at.strftime("%B %d, %Y") %></p>
            </div>

            <div>
              <p class="text-sm text-gray-600">Last Updated</p>
              <p class="text-sm font-medium text-gray-900"><%= @email_template.updated_at.strftime("%B %d, %Y") %></p>
            </div>
          </div>

          <% if @email_template.variables.present? %>
            <div class="mt-6 pt-6 border-t border-gray-200">
              <h3 class="text-sm font-medium text-gray-900 mb-3">Variables</h3>
              <div class="flex flex-wrap gap-2">
                <% @email_template.variables.each do |var| %>
                  <span class="px-2 py-1 text-xs bg-gray-100 text-gray-700 rounded">{{<%= var %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Content Panel -->
      <div class="lg:col-span-2">
        <div class="space-y-6">
          <!-- Subject -->
          <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Email Subject</h3>
            <div class="bg-gray-50 p-4 rounded border border-gray-200">
              <code class="text-sm text-gray-700"><%= @email_template.subject %></code>
            </div>
          </div>

          <!-- HTML Preview -->
          <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">HTML Preview</h3>
            <div class="border border-gray-200 rounded overflow-hidden">
              <iframe srcdoc="<%= @email_template.html_body %>" class="w-full h-96" frameborder="0"></iframe>
            </div>
            <details class="mt-4">
              <summary class="cursor-pointer text-sm text-blue-600 hover:text-blue-700 font-medium">View HTML Code</summary>
              <div class="mt-3 bg-gray-50 p-4 rounded border border-gray-200">
                <pre class="text-xs text-gray-700 overflow-x-auto"><%= @email_template.html_body %></pre>
              </div>
            </details>
          </div>

          <!-- Text Preview -->
          <% if @email_template.text_body.present? %>
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Plain Text Version</h3>
              <div class="bg-gray-50 p-4 rounded border border-gray-200">
                <pre class="text-sm text-gray-700 font-mono whitespace-pre-wrap"><%= @email_template.text_body %></pre>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
