<div class="min-h-screen bg-gray-50 pt-20">
  <!-- Page Header -->
  <div class="bg-white border-b border-gray-200 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3">
        <%= link_to admin_support_messages_path, class: "text-gray-600 hover:text-gray-900" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        <div class="flex-1">
          <h1 class="text-2xl font-bold text-gray-900">Conversation with <%= @conversation.user.full_name %></h1>
          <div class="mt-1 flex items-center gap-4 text-sm text-gray-600">
            <span><%= @conversation.user.email %></span>
            <span>•</span>
            <span><%= @conversation.user.plan.humanize %> plan</span>
            <span>•</span>
            <span>Started <%= time_ago_in_words(@conversation.created_at) %> ago</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- User Info Card -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">User Information</h3>
      <div class="grid grid-cols-2 gap-4 text-sm">
        <div>
          <p class="text-gray-600">Full Name</p>
          <p class="font-medium text-gray-900"><%= @conversation.user.full_name %></p>
        </div>
        <div>
          <p class="text-gray-600">Email</p>
          <p class="font-medium text-gray-900"><%= @conversation.user.email %></p>
        </div>
        <div>
          <p class="text-gray-600">Plan</p>
          <p class="font-medium text-gray-900"><%= @conversation.user.plan.humanize %></p>
        </div>
        <div>
          <p class="text-gray-600">Member Since</p>
          <p class="font-medium text-gray-900"><%= @conversation.user.created_at.strftime('%B %d, %Y') %></p>
        </div>
        <% if @conversation.user.npi.present? %>
          <div>
            <p class="text-gray-600">NPI</p>
            <p class="font-medium text-gray-900"><%= @conversation.user.npi %></p>
          </div>
        <% end %>
        <% if @conversation.user.phone.present? %>
          <div>
            <p class="text-gray-600">Phone</p>
            <p class="font-medium text-gray-900"><%= @conversation.user.phone %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Conversation Thread -->
    <div class="space-y-4 mb-6">
      <% @messages.each do |message| %>
        <div class="<%= message.is_admin_response? ? 'bg-purple-50 border-purple-200' : 'bg-white border-gray-200' %> border rounded-lg p-6">
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full <%= message.is_admin_response? ? 'bg-purple-600' : 'bg-blue-500' %> flex items-center justify-center text-white font-medium">
                <% if message.is_admin_response? %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                <% else %>
                  <%= message.user.first_name[0].upcase %>
                <% end %>
              </div>
              <div>
                <p class="font-medium <%= message.is_admin_response? ? 'text-purple-900' : 'text-gray-900' %>">
                  <%= message.is_admin_response? ? 'Support Team (You)' : message.user.full_name %>
                </p>
                <p class="text-sm text-gray-500">
                  <%= message.created_at.strftime('%B %d, %Y at %I:%M %p') %>
                </p>
              </div>
            </div>
            <% if message.unread? && !message.is_admin_response? %>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                Unread
              </span>
            <% end %>
          </div>
          <div class="ml-13 text-gray-700 whitespace-pre-wrap">
            <%= message.message %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Reply Form -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Send Reply</h3>
      <%= form_with url: reply_admin_support_message_path(@conversation), method: :post, local: true do |f| %>
        <% if @new_reply.errors.any? %>
          <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="text-red-800 font-medium mb-2">
              <%= pluralize(@new_reply.errors.count, "error") %> prohibited this reply from being sent:
            </h3>
            <ul class="list-disc list-inside text-red-700 text-sm">
              <% @new_reply.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.text_area "support_message[message]", rows: 8, placeholder: "Type your reply to #{@conversation.user.first_name}...", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 resize-none" %>
          <p class="mt-2 text-sm text-gray-500">Maximum 2000 characters. The user will be notified via email.</p>
        </div>

        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
          <h4 class="font-medium text-blue-900 mb-2 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Reply Tips
          </h4>
          <ul class="text-sm text-blue-800 space-y-1">
            <li>✓ Be professional and courteous</li>
            <li>✓ Provide clear, actionable solutions</li>
            <li>✓ Include relevant documentation links if applicable</li>
            <li>✓ User will receive email notification</li>
          </ul>
        </div>

        <div class="flex items-center justify-end gap-3">
          <%= link_to "Back to Inbox", admin_support_messages_path, class: "px-6 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 font-medium" %>
          <%= f.submit "Send Reply", class: "px-6 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 font-medium cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
