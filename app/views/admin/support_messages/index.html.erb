<div class="min-h-screen bg-gray-50 pt-20">
  <!-- Page Header -->
  <div class="bg-white border-b border-gray-200 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= link_to admin_root_path, class: "text-gray-600 hover:text-gray-900" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Support Messages</h1>
            <p class="mt-2 text-gray-600">Manage user support conversations</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Conversations</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= SupportMessage.root_messages.count %></p>
          </div>
          <div class="p-3 bg-blue-100 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Unread Messages</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= @unread_count %></p>
          </div>
          <div class="p-3 bg-yellow-100 rounded-full">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Unanswered</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= @unanswered_count %></p>
          </div>
          <div class="p-3 bg-red-100 rounded-full">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Filter Tabs -->
    <div class="bg-white rounded-t-lg border-b border-gray-200">
      <nav class="flex -mb-px">
        <%= link_to admin_support_messages_path, class: "px-6 py-4 text-sm font-medium #{@filter == 'all' ? 'border-b-2 border-purple-600 text-purple-600' : 'text-gray-500 hover:text-gray-700'}" do %>
          All Conversations
        <% end %>
        <%= link_to admin_support_messages_path(filter: 'unread'), class: "px-6 py-4 text-sm font-medium #{@filter == 'unread' ? 'border-b-2 border-purple-600 text-purple-600' : 'text-gray-500 hover:text-gray-700'}" do %>
          Unread
          <% if @unread_count > 0 %>
            <span class="ml-2 px-2 py-1 text-xs rounded-full bg-yellow-100 text-yellow-800"><%= @unread_count %></span>
          <% end %>
        <% end %>
        <%= link_to admin_support_messages_path(filter: 'unanswered'), class: "px-6 py-4 text-sm font-medium #{@filter == 'unanswered' ? 'border-b-2 border-purple-600 text-purple-600' : 'text-gray-500 hover:text-gray-700'}" do %>
          Unanswered
          <% if @unanswered_count > 0 %>
            <span class="ml-2 px-2 py-1 text-xs rounded-full bg-red-100 text-red-800"><%= @unanswered_count %></span>
          <% end %>
        <% end %>
      </nav>
    </div>

    <!-- Conversations List -->
    <% if @conversations.any? %>
      <div class="bg-white rounded-b-lg shadow">
        <div class="divide-y divide-gray-200">
          <% @conversations.each do |conversation| %>
            <%
              # Color coding: green for unanswered (no admin replies), grey for answered
              has_admin_reply = conversation.replies.any? { |r| r.is_admin_response? }
              bg_color = has_admin_reply ? 'bg-gray-100' : 'bg-green-50'
              hover_color = has_admin_reply ? 'hover:bg-gray-200' : 'hover:bg-green-100'
            %>
            <%= link_to admin_support_message_path(conversation), class: "block #{bg_color} #{hover_color} transition-colors" do %>
              <div class="p-6">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                      <h3 class="text-lg font-medium text-gray-900">
                        <%= conversation.user.full_name %>
                      </h3>
                      <span class="text-sm text-gray-500"><%= conversation.user.email %></span>
                      <% if conversation.replies.select { |r| !r.is_admin_response? && r.unread? }.any? %>
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                          Unread
                        </span>
                      <% end %>
                      <% if conversation.replies.empty? %>
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                          Needs Response
                        </span>
                      <% end %>
                    </div>
                    <p class="text-gray-700 mb-2">
                      <%= conversation.conversation_preview %>
                    </p>
                    <% if conversation.replies.any? %>
                      <p class="mt-2 text-sm text-gray-600">
                        <% last_reply = conversation.replies.order(created_at: :desc).first %>
                        <% if last_reply.is_admin_response? %>
                          <span class="font-medium text-purple-600">You responded:</span>
                        <% else %>
                          <span class="font-medium text-gray-900"><%= last_reply.user.first_name %> replied:</span>
                        <% end %>
                        <%= truncate(last_reply.message, length: 100) %>
                      </p>
                    <% end %>
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
                <div class="mt-3 flex items-center gap-4 text-xs text-gray-500">
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                    <%= pluralize(conversation.replies.count + 1, 'message') %>
                  </span>
                  <span>Started <%= time_ago_in_words(conversation.created_at) %> ago</span>
                  <span>Last activity <%= time_ago_in_words(conversation.replies.maximum(:created_at) || conversation.created_at) %> ago</span>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Pagination -->
      <div class="mt-6">
        <%= paginate @conversations %>
      </div>
    <% else %>
      <div class="bg-white rounded-b-lg shadow p-12 text-center">
        <svg class="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No conversations found</h3>
        <p class="mt-2 text-gray-500">
          <% if @filter == 'unread' %>
            No unread messages at this time
          <% elsif @filter == 'unanswered' %>
            All conversations have been answered
          <% else %>
            No support messages have been sent yet
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
