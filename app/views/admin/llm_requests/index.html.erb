<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">LLM Requests</h1>
      <p class="mt-2 text-gray-600">Monitor and analyze AI model usage and costs</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-gray-500 text-sm font-medium">Total Requests</div>
        <div class="mt-2 text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_requests) %></div>
      </div>
      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-gray-500 text-sm font-medium">Total Tokens</div>
        <div class="mt-2 text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_tokens) %></div>
      </div>
      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-gray-500 text-sm font-medium">Total Cost</div>
        <div class="mt-2 text-3xl font-bold text-gray-900">$<%= number_with_precision(@total_cost, precision: 2) %></div>
      </div>
      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-gray-500 text-sm font-medium">Avg Cost/Request</div>
        <div class="mt-2 text-3xl font-bold text-gray-900">$<%= number_with_precision(@avg_cost, precision: 4) %></div>
      </div>
    </div>

    <!-- Requests Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Credential</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">User</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Model</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Tokens</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Cost</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @llm_requests.any? %>
            <% @llm_requests.each do |request| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if request.credential %>
                    <%= link_to request.credential.title, credential_path(request.credential), class: "text-purple-600 hover:text-purple-900 font-medium" %>
                  <% else %>
                    <span class="text-gray-500 text-sm">Deleted</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if request.user %>
                    <div class="text-sm font-medium text-gray-900"><%= request.user.email %></div>
                    <div class="text-xs text-gray-500"><%= request.user.first_name %> <%= request.user.last_name %></div>
                  <% else %>
                    <span class="text-gray-500 text-sm">Deleted</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium"><%= request.model %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= number_with_delimiter(request.total_tokens) %></div>
                  <div class="text-xs text-gray-500">
                    <span class="text-green-700">↓ <%= request.input_tokens %></span> / <span class="text-orange-700">↑ <%= request.output_tokens %></span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm font-medium text-gray-900">$<%= number_with_precision(request.cost, precision: 4) %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if request.success %>
                    <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Success</span>
                  <% else %>
                    <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm font-medium">Failed</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm text-gray-600"><%= request.created_at.strftime("%b %d, %Y %I:%M %p") %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <%= link_to admin_llm_request_path(request), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" do %>
                    View
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="8" class="px-6 py-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No LLM requests</h3>
                <p class="mt-1 text-sm text-gray-500">No AI model requests have been made yet.</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @llm_requests.respond_to?(:total_pages) && @llm_requests.total_pages > 1 %>
      <div class="mt-8 flex items-center justify-between px-4 py-3 sm:px-6 bg-white rounded-lg shadow">
        <div class="text-sm text-gray-700">
          Showing <span class="font-medium"><%= @llm_requests.offset_value + 1 %></span> to <span class="font-medium"><%= [@llm_requests.offset_value + @llm_requests.limit_value, @llm_requests.total_count].min %></span> of <span class="font-medium"><%= @llm_requests.total_count %></span>
        </div>
        <nav class="flex gap-2">
          <% if @llm_requests.prev_page %>
            <%= link_to admin_llm_requests_path(page: @llm_requests.prev_page), class: "px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>Previous<% end %>
          <% end %>
          <% if @llm_requests.next_page %>
            <%= link_to admin_llm_requests_path(page: @llm_requests.next_page), class: "px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>Next<% end %>
          <% end %>
        </nav>
      </div>
    <% end %>
  </div>
</div>
