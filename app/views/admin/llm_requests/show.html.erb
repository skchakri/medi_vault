<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">LLM Request Details</h1>
        <p class="mt-2 text-gray-600">Request ID: <%= @llm_request.id %></p>
      </div>
      <%= link_to admin_llm_requests_path, class: "text-purple-600 hover:text-purple-900 font-medium" do %>
        &larr; Back to Requests
      <% end %>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <!-- Status Header -->
      <div class="bg-gradient-to-r <%= @llm_request.success ? 'from-green-50 to-green-100' : 'from-red-50 to-red-100' %> p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-xl font-bold text-gray-900">
              <%= @llm_request.success ? '✓ Successful' : '✗ Failed' %>
            </h2>
            <p class="text-sm text-gray-600 mt-1">Completed at <%= @llm_request.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
          <% if @llm_request.success %>
            <span class="px-4 py-2 bg-green-100 text-green-800 rounded-lg text-sm font-medium">Success</span>
          <% else %>
            <span class="px-4 py-2 bg-red-100 text-red-800 rounded-lg text-sm font-medium">Failed</span>
          <% end %>
        </div>
      </div>

      <!-- Content -->
      <div class="p-6">
        <!-- Request Details Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div>
            <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">Request Information</h3>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm text-gray-600">Model</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @llm_request.model %></dd>
              </div>
              <div>
                <dt class="text-sm text-gray-600">Credential</dt>
                <dd class="text-lg font-medium">
                  <% if @llm_request.credential %>
                    <%= link_to @llm_request.credential.title, credential_path(@llm_request.credential), class: "text-purple-600 hover:text-purple-900" %>
                  <% else %>
                    <span class="text-gray-500">Deleted</span>
                  <% end %>
                </dd>
              </div>
              <div>
                <dt class="text-sm text-gray-600">User</dt>
                <dd class="text-lg font-medium">
                  <% if @llm_request.user %>
                    <%= @llm_request.user.email %>
                  <% else %>
                    <span class="text-gray-500">Deleted</span>
                  <% end %>
                </dd>
              </div>
            </dl>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">Token & Cost Analytics</h3>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm text-gray-600">Input Tokens</dt>
                <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@llm_request.input_tokens) %></dd>
              </div>
              <div>
                <dt class="text-sm text-gray-600">Output Tokens</dt>
                <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@llm_request.output_tokens) %></dd>
              </div>
              <div class="pt-2 border-t border-gray-200">
                <dt class="text-sm text-gray-600">Total Tokens</dt>
                <dd class="text-lg font-bold text-gray-900"><%= number_with_delimiter(@llm_request.total_tokens) %></dd>
              </div>
              <div class="pt-2">
                <dt class="text-sm text-gray-600">Cost</dt>
                <dd class="text-2xl font-bold text-purple-600">$<%= number_with_precision(@llm_request.cost, precision: 4) %></dd>
              </div>
            </dl>
          </div>
        </div>

        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">Prompt</h3>
          <div class="bg-gray-50 rounded-lg p-4 font-mono text-sm text-gray-700 max-h-48 overflow-auto whitespace-pre-wrap">
            <%= @llm_request.prompt %>
          </div>
        </div>

        <% if @llm_request.response.present? %>
          <div class="border-t border-gray-200 pt-6 mt-6">
            <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">Response</h3>
            <div class="bg-gray-50 rounded-lg p-4 font-mono text-sm text-gray-700 max-h-48 overflow-auto whitespace-pre-wrap">
              <%= @llm_request.response %>
            </div>
          </div>
        <% end %>

        <% if @llm_request.error_message.present? %>
          <div class="border-t border-red-200 pt-6 mt-6 bg-red-50 rounded-lg p-4">
            <h3 class="text-sm font-semibold text-red-900 uppercase tracking-wide mb-2">Error</h3>
            <div class="text-red-700 font-mono text-sm">
              <%= @llm_request.error_message %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
