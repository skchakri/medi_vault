<%= form_with model: [:admin, tag], class: "space-y-6" do |form| %>
  <% if tag.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% tag.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Name Field -->
  <div>
    <%= form.label :name, "Tag Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name,
        placeholder: "e.g., medical license",
        class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500 text-base",
        required: true %>
    <p class="mt-1 text-sm text-gray-500">Lowercase letters, numbers, hyphens, underscores, and spaces only</p>
  </div>

  <!-- Color Field -->
  <div>
    <%= form.label :color, "Tag Color", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="flex items-center gap-4">
      <%= form.color_field :color,
          class: "h-12 w-20 rounded border border-gray-300 cursor-pointer",
          required: true %>
      <div class="flex-1">
        <%= form.text_field :color,
            placeholder: "#3B82F6",
            class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500 font-mono text-sm" %>
      </div>
      <div class="flex items-center gap-2 px-3 py-2 rounded" style="background-color: <%= tag.color || '#6B7280' %>20">
        <span class="w-3 h-3 rounded-full" style="background-color: <%= tag.color || '#6B7280' %>"></span>
        <span class="text-sm font-medium" style="color: <%= tag.color || '#6B7280' %>">Preview</span>
      </div>
    </div>
  </div>

  <!-- Predefined Color Palette -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">Quick Select Colors</label>
    <div class="flex flex-wrap gap-2">
      <% Tag::TAG_COLORS.each do |color| %>
        <button type="button"
                onclick="document.querySelectorAll('input[type=color], input[name=\'tag[color]\']').forEach(el => el.value = '<%= color %>')"
                class="w-8 h-8 rounded-full border-2 border-gray-300 hover:border-purple-500 transition-colors cursor-pointer"
                style="background-color: <%= color %>"
                title="<%= color %>">
        </button>
      <% end %>
    </div>
  </div>

  <!-- Description Field -->
  <div>
    <%= form.label :description, "Description (Optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description,
        rows: 3,
        placeholder: "Brief description of what this tag represents...",
        class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500 text-base" %>
  </div>

  <!-- Active Checkbox -->
  <div class="flex items-start">
    <div class="flex items-center h-5">
      <%= form.check_box :active,
          class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded cursor-pointer" %>
    </div>
    <div class="ml-3 text-sm">
      <%= form.label :active, class: "font-medium text-gray-700 cursor-pointer" do %>
        Active
      <% end %>
      <p class="text-gray-500">Make this tag available for users to select</p>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center justify-between pt-5 border-t border-gray-200">
    <%= link_to "Cancel", admin_tags_path, class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition-colors" %>
    <%= form.submit class: "px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-lg font-medium hover:from-purple-700 hover:to-blue-700 transition-all shadow-md hover:shadow-lg cursor-pointer" %>
  </div>
<% end %>
