<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to admin_tags_path, class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors duration-150" do %>
        <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Tags
      <% end %>
    </div>

    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center h-16 w-16 bg-gradient-to-br from-purple-100 to-blue-100 rounded-full mb-4">
        <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Edit Tag</h1>
      <p class="mt-2 text-gray-600">Update tag settings</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md p-8">
      <%= render 'form', tag: @tag %>
    </div>

    <!-- Usage Info -->
    <% if @tag.usage_count > 0 %>
      <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">Tag Usage</h3>
            <p class="mt-1 text-sm text-blue-700">
              This tag is currently used by <%= @tag.usage_count %> credential<%= 's' if @tag.usage_count != 1 %>.
              Changes to this tag will affect all associated credentials.
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
