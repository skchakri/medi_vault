<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to admin_tags_path, class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors duration-150" do %>
        <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Tags
      <% end %>
    </div>

    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center h-16 w-16 bg-gradient-to-br from-purple-100 to-blue-100 rounded-full mb-4">
        <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Create New Tag</h1>
      <p class="mt-2 text-gray-600">Add a new default tag for credentials</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md p-8">
      <%= render 'form', tag: @tag %>
    </div>
  </div>
</div>
