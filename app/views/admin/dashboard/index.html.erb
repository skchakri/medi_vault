<div class="min-h-screen bg-gray-50 pt-20">
  <!-- Page Header -->
  <div class="bg-white border-b border-gray-200 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
      <p class="mt-2 text-gray-600">System overview and analytics</p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <!-- Total Users -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Total Users</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @stats[:total_users] %></p>
          </div>
          <div class="p-3 bg-blue-100 rounded-lg">
            <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 12H9m4 5h4m-4 0v4m0-11v-1" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Active Users -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Active Users</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @stats[:active_users] %></p>
          </div>
          <div class="p-3 bg-green-100 rounded-lg">
            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Total Credentials -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Total Credentials</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @stats[:total_credentials] %></p>
          </div>
          <div class="p-3 bg-purple-100 rounded-lg">
            <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Pending Alerts -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Pending Alerts</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @stats[:pending_alerts] %></p>
          </div>
          <div class="p-3 bg-red-100 rounded-lg">
            <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Expiring Soon -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Expiring Soon</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @stats[:credentials_expiring_soon] %></p>
          </div>
          <div class="p-3 bg-yellow-100 rounded-lg">
            <svg class="h-8 w-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Expired -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Expired</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @stats[:credentials_expired] %></p>
          </div>
          <div class="p-3 bg-gray-100 rounded-lg">
            <svg class="h-8 w-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>
        </div>
      </div>

      <!-- LLM Requests Today -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">LLM Requests (Today)</p>
            <p class="mt-2 text-3xl font-bold text-gray-900"><%= @stats[:llm_requests_today] %></p>
          </div>
          <div class="p-3 bg-indigo-100 rounded-lg">
            <svg class="h-8 w-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Total LLM Cost -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 font-medium">Total LLM Cost</p>
            <p class="mt-2 text-3xl font-bold text-gray-900">$<%= number_with_precision(@stats[:llm_total_cost], precision: 2) %></p>
          </div>
          <div class="p-3 bg-cyan-100 rounded-lg">
            <svg class="h-8 w-8 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Data Tables -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
      <!-- Recent Users -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Recent Users</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Email</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Joined</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @recent_users.each do |user| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-3 text-sm font-medium text-gray-900">
                    <%= link_to user.full_name, admin_user_path(user), class: "text-blue-600 hover:text-blue-900" %>
                  </td>
                  <td class="px-6 py-3 text-sm text-gray-600"><%= user.email %></td>
                  <td class="px-6 py-3 text-sm text-gray-600"><%= user.created_at.strftime("%b %d, %Y") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Recent LLM Requests -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Recent LLM Requests</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Provider</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Cost</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @recent_llm_requests.each do |request| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-3 text-sm font-medium text-gray-900">
                    <span class="px-2 py-1 text-xs font-medium rounded-full <%= request.provider == 'openai' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= request.provider.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-3 text-sm">
                    <span class="px-2 py-1 text-xs font-medium rounded-full <%= request.success ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= request.success ? "Success" : "Failed" %>
                    </span>
                  </td>
                  <td class="px-6 py-3 text-sm text-gray-600">$<%= request.cost_dollars %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Recent Credentials -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Recent Credentials</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Title</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">User</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Expires</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Uploaded</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @recent_credentials.each do |credential| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-3 text-sm font-medium text-gray-900">
                  <%= link_to credential.title, admin_credential_path(credential), class: "text-blue-600 hover:text-blue-900" %>
                </td>
                <td class="px-6 py-3 text-sm text-gray-600">
                  <%= link_to credential.user.full_name, admin_user_path(credential.user), class: "text-blue-600 hover:text-blue-900" %>
                </td>
                <td class="px-6 py-3 text-sm">
                  <% status_color = case credential.status
                    when 'expired'
                      'bg-red-100 text-red-800'
                    when 'expiring_soon'
                      'bg-yellow-100 text-yellow-800'
                    when 'active'
                      'bg-green-100 text-green-800'
                    else
                      'bg-gray-100 text-gray-800'
                    end %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= status_color %>">
                    <%= credential.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-3 text-sm text-gray-600">
                  <% if credential.end_date %>
                    <%= credential.end_date.strftime("%b %d, %Y") %>
                  <% else %>
                    â€”
                  <% end %>
                </td>
                <td class="px-6 py-3 text-sm text-gray-600"><%= credential.created_at.strftime("%b %d, %Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="mt-8 flex justify-start gap-4">
      <%= link_to "Manage Users", admin_users_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
      <%= link_to "View Credentials", admin_credentials_path, class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition" %>
      <%= link_to "LLM Requests", admin_llm_requests_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition" %>
      <%= link_to "Reports", admin_reports_path, class: "px-4 py-2 bg-cyan-600 text-white rounded-lg hover:bg-cyan-700 transition" %>
    </div>
  </div>
</div>
