<div class="min-h-screen bg-gradient-to-br from-purple-50 to-blue-50 pt-4 pb-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to credentials_path, class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors duration-150" do %>
        <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Credentials
      <% end %>
    </div>

    <!-- Header Card -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="flex flex-col md:flex-row md:items-start md:justify-between">
        <div class="flex items-start flex-1">
          <div class="flex-shrink-0 h-16 w-16 bg-gradient-to-br from-purple-100 to-blue-100 rounded-lg flex items-center justify-center">
            <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <div class="ml-5 flex-1">
            <h1 class="text-2xl font-bold text-gray-900"><%= @credential.title %></h1>
            <div class="mt-2">
              <%= render 'shared/status_badge', status: @credential.status %>
            </div>
          </div>
        </div>
        <div class="mt-4 md:mt-0 flex space-x-3">
          <%= link_to edit_credential_path(@credential), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-150" do %>
            <svg class="h-5 w-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit
          <% end %>
          <%= link_to credential_path(@credential), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this credential?' }, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-150" do %>
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Details Card -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Credential Details</h2>
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Issue Date</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @credential.start_date %>
                  <%= @credential.start_date.strftime('%B %d, %Y') %>
                <% else %>
                  <span class="text-gray-400">Not specified</span>
                <% end %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Expiry Date</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @credential.end_date %>
                  <%= @credential.end_date.strftime('%B %d, %Y') %>
                  <% if @credential.status == 'expiring_soon' %>
                    <span class="ml-2 inline-flex items-center text-xs text-yellow-600">
                      <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                      </svg>
                      Expiring soon
                    </span>
                  <% elsif @credential.status == 'expired' %>
                    <span class="ml-2 inline-flex items-center text-xs text-red-600">
                      <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      Expired
                    </span>
                  <% end %>
                <% else %>
                  <span class="text-gray-400">Not specified</span>
                <% end %>
              </dd>
            </div>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @credential.created_at.strftime('%B %d, %Y at %I:%M %p') %>
              </dd>
            </div>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @credential.updated_at.strftime('%B %d, %Y at %I:%M %p') %>
              </dd>
            </div>
          </dl>
        </div>

        <!-- Notes Card -->
        <% if @credential.notes.present? %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Notes</h2>
            <div class="prose prose-sm max-w-none text-gray-700">
              <%= simple_format(@credential.notes) %>
            </div>
          </div>
        <% end %>

        <!-- Alerts Card -->
        <% if @alerts && @alerts.any? %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Expiration Alerts</h2>
            <div class="space-y-4">
              <% @alerts.each do |alert| %>
                <div class="flex items-start p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                  <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                    </svg>
                  </div>
                  <div class="ml-3 flex-1">
                    <p class="text-sm font-medium text-yellow-900">
                      Alert scheduled for <%= alert.alert_date.strftime('%B %d, %Y') %>
                    </p>
                    <p class="mt-1 text-sm text-yellow-700">
                      <%= render 'shared/status_badge', status: alert.status %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Share Links Card -->
        <% if @share_links && @share_links.any? %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Share Links</h2>
            <div class="space-y-4">
              <% @share_links.each do |share_link| %>
                <div class="flex items-center justify-between p-4 bg-blue-50 border border-blue-200 rounded-lg">
                  <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900 break-all">
                      <%= share_link.share_url %>
                    </p>
                    <div class="mt-1 flex items-center space-x-4 text-xs text-gray-500">
                      <span>Expires: <%= share_link.expires_at.strftime('%b %d, %Y at %I:%M %p') if share_link.expires_at %></span>
                      <% if share_link.used_at %>
                        <span class="px-2 py-0.5 bg-gray-100 text-gray-800 rounded text-xs font-medium">Used</span>
                      <% elsif share_link.active? %>
                        <span class="px-2 py-0.5 bg-green-100 text-green-800 rounded text-xs font-medium">Active</span>
                      <% else %>
                        <span class="px-2 py-0.5 bg-red-100 text-red-800 rounded text-xs font-medium">Expired</span>
                      <% end %>
                    </div>
                  </div>
                  <div>
                    <button onclick="navigator.clipboard.writeText('<%= share_link.share_url %>'); alert('Link copied!')" class="text-blue-600 hover:text-blue-800 text-sm font-medium transition-colors duration-150">
                      Copy Link
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- File Card -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Attached File</h2>
          <% if @credential.file.attached? %>
            <div class="space-y-4">
              <div class="flex items-center justify-center p-8 bg-gradient-to-br from-purple-50 to-blue-50 rounded-lg">
                <svg class="h-16 w-16 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= @credential.file.filename %>
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  <%= number_to_human_size(@credential.file.byte_size) %>
                </p>
              </div>
              <div class="space-y-2">
                <%= link_to rails_blob_path(@credential.file, disposition: "attachment"), class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-150" do %>
                  <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                  </svg>
                  Download File
                <% end %>
                <% if @credential.file.content_type.start_with?('image/') || @credential.file.content_type == 'application/pdf' %>
                  <%= link_to rails_blob_path(@credential.file), target: "_blank", class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-150" do %>
                    <svg class="h-5 w-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    Preview
                  <% end %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No file attached</p>
            </div>
          <% end %>
        </div>

        <!-- Alerts Management Card -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Expiration Alerts</h2>

          <% if @alerts && @alerts.any? %>
            <div class="space-y-3 mb-4">
              <% @alerts.each do |alert| %>
                <div class="flex items-center justify-between p-3 bg-blue-50 border border-blue-200 rounded-lg">
                  <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900">
                      <%= alert.offset_days %> day<%= alert.offset_days != 1 ? 's' : '' %> before
                    </p>
                    <p class="text-xs text-gray-600 mt-1">
                      Alert on <%= alert.alert_date.strftime('%b %d, %Y') %>
                    </p>
                  </div>
                  <div class="flex items-center gap-2">
                    <span class="px-2 py-1 bg-<%= alert.status == 'pending' ? 'yellow' : alert.status == 'sent' ? 'green' : 'gray' %>-100 text-<%= alert.status == 'pending' ? 'yellow' : alert.status == 'sent' ? 'green' : 'gray' %>-800 rounded text-xs font-medium">
                      <%= alert.status.humanize %>
                    </span>
                    <%= link_to alert_path(alert), method: :delete, data: { confirm: "Delete this alert?" }, class: "text-red-600 hover:text-red-900 transition-colors" do %>
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-600 mb-4">No alerts created yet.</p>
          <% end %>

          <!-- Add Alert Button -->
          <button type="button" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-150 mb-4" onclick="document.getElementById('alert-section-sidebar').classList.toggle('hidden')">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Add New Alert
          </button>

          <!-- Add Alert Form (Hidden by default) -->
          <div id="alert-section-sidebar" class="hidden pt-4 border-t border-gray-200">
            <p class="text-xs font-medium text-gray-600 mb-3">Select when to be alerted:</p>

            <%= form_with url: credential_alerts_path(@credential), local: true, method: :post, class: "space-y-3" do |f| %>
              <% alert_options = [
                { label: '1 day before', days: 1 },
                { label: '1 week before', days: 7 },
                { label: '1 month before', days: 30 },
                { label: '3 months before', days: 90 }
              ] %>

              <% alert_options.each do |option| %>
                <label class="flex items-center p-2 border border-gray-300 rounded cursor-pointer hover:bg-purple-50 transition-colors has-[:checked]:border-purple-500 has-[:checked]:bg-purple-50">
                  <%= f.radio_button :offset_days, option[:days], { class: "h-4 w-4 text-purple-600" } %>
                  <div class="flex-1 ml-2 flex items-center justify-between">
                    <span class="text-xs font-medium text-gray-900"><%= option[:label] %></span>
                    <% if @credential.end_date %>
                      <% alert_date = @credential.end_date - option[:days].days %>
                      <span class="text-xs text-gray-600"><%= alert_date.strftime('%b %d') %></span>
                    <% end %>
                  </div>
                </label>
              <% end %>

              <div class="flex gap-2 pt-2">
                <%= f.submit "Add Alert", class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-transparent rounded-lg shadow-sm text-xs font-medium text-white bg-purple-600 hover:bg-purple-700 transition-colors" %>
                <button type="button" onclick="document.getElementById('alert-section-sidebar').classList.add('hidden')" class="flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 rounded-lg shadow-sm text-xs font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                  Cancel
                </button>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
          <div class="space-y-2">
            <!-- Share Credential -->
            <%= form_with url: credential_share_links_path(@credential), local: true, method: :post, class: "w-full" do |f| %>
              <button type="submit" class="w-full inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-150 cursor-pointer">
                <svg class="h-5 w-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                </svg>
                Share Credential
              </button>
            <% end %>

            <!-- Set Alert Button -->
            <button type="button" class="w-full inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-150" onclick="document.getElementById('alert-section').classList.toggle('hidden')">
              <svg class="h-5 w-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
              Set Alert
            </button>

            <!-- Print -->
            <button type="button" class="w-full inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-150" onclick="window.print()">
              <svg class="h-5 w-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
              </svg>
              Print
            </button>
          </div>
        </div>

        <!-- Set Alert Section (Hidden by default) -->
        <div id="alert-section" class="bg-white rounded-lg shadow-md p-6 mb-6 hidden">
          <div class="mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Create Expiration Alert</h3>
            <p class="text-sm text-gray-600 mt-1">Expires on <%= @credential.end_date.strftime('%B %d, %Y') if @credential.end_date %></p>
          </div>

          <%= form_with url: credential_alerts_path(@credential), local: true, method: :post, class: "space-y-4" do |f| %>
            <div>
              <p class="text-sm font-medium text-gray-700 mb-3">Select when to be alerted:</p>

              <div class="space-y-2">
                <% alert_options = [
                  { label: '1 day before', days: 1 },
                  { label: '1 week before', days: 7 },
                  { label: '1 month before', days: 30 },
                  { label: '3 months before', days: 90 }
                ] %>

                <% alert_options.each do |option| %>
                  <label class="flex items-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-purple-50 transition-colors has-[:checked]:border-purple-500 has-[:checked]:bg-purple-50">
                    <%= f.radio_button :offset_days, option[:days], { class: "h-4 w-4 text-purple-600 border-gray-300 focus:ring-purple-500" } %>
                    <div class="flex-1 ml-3 flex items-center justify-between">
                      <span class="text-sm font-medium text-gray-900"><%= option[:label] %></span>
                      <% if @credential.end_date %>
                        <% alert_date = @credential.end_date - option[:days].days %>
                        <span class="text-sm text-gray-600"><%= alert_date.strftime('%b %d, %Y') %></span>
                      <% end %>
                    </div>
                  </label>
                <% end %>
              </div>
            </div>

            <div class="pt-4 border-t border-gray-200">
              <%= f.label :message, "Custom message (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :message, rows: 2, class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500 text-sm", placeholder: "Add a custom alert message..." %>
            </div>

            <div class="flex gap-3 pt-4">
              <%= f.submit "Create Alert", class: "flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 transition-colors" %>
              <button type="button" onclick="document.getElementById('alert-section').classList.add('hidden')" class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                Cancel
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
