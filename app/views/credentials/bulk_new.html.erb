<div class="min-h-screen bg-gradient-to-br from-purple-50 to-blue-50 pb-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to credentials_path, class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors duration-150" do %>
        <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Credentials
      <% end %>
    </div>

    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center h-16 w-16 bg-gradient-to-br from-purple-100 to-blue-100 rounded-full mb-4">
        <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Bulk Upload Credentials</h1>
      <p class="mt-2 text-gray-600">Upload multiple medical documents at once - AI will analyze each file</p>
      <div class="mt-3 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
        <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
        <%= current_user.credentials.count %> / <%= current_user.max_credentials %> credentials used
      </div>
    </div>

    <!-- Upload Form Card -->
    <div class="bg-white rounded-lg shadow-md p-8" data-controller="bulk-upload-progress">
      <%= form_with url: bulk_create_credentials_path, method: :post, multipart: true, id: "bulk-upload-form", data: { controller: "bulk-upload", turbo: false, action: "submit->bulk-upload-progress#startUpload" } do |f| %>

        <!-- Mobile Upload Buttons (visible on mobile only) -->
        <div class="block md:hidden space-y-3 mb-6">
          <!-- Take Photo Button -->
          <button
            type="button"
            data-action="click->bulk-upload#openCamera"
            class="w-full flex items-center justify-center gap-3 px-6 py-4 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-lg font-medium hover:from-purple-700 hover:to-blue-700 transition-all shadow-md active:scale-95">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-lg">Take Photo(s)</span>
          </button>

          <!-- Choose Files Button -->
          <button
            type="button"
            data-action="click->bulk-upload#openFilePicker"
            class="w-full flex items-center justify-center gap-3 px-6 py-4 border-2 border-purple-600 text-purple-600 rounded-lg font-medium hover:bg-purple-50 transition-all active:scale-95">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            <span class="text-lg">Choose Files</span>
          </button>
        </div>

        <!-- Desktop Drag and Drop Zone (hidden on mobile) -->
        <div
          id="drop-zone"
          data-bulk-upload-target="dropzone"
          data-action="drop->bulk-upload#handleDrop dragover->bulk-upload#handleDragOver dragleave->bulk-upload#handleDragLeave click->bulk-upload#openFilePicker"
          class="hidden md:block border-2 border-dashed border-gray-300 rounded-lg p-12 text-center hover:border-purple-400 transition-colors duration-200 cursor-pointer bg-gray-50 hover:bg-purple-50 active:bg-purple-100 touch-manipulation"
        >
          <svg class="mx-auto h-12 w-12 text-gray-400 pointer-events-none" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <div class="mt-4 pointer-events-none">
            <span class="text-lg font-medium text-purple-600">Choose files</span>
            <span class="text-gray-600"> or drag and drop</span>
          </div>
          <p class="mt-2 text-sm text-gray-500 pointer-events-none">PDF, JPG, PNG, DOC, DOCX up to 10MB each</p>
        </div>

        <!-- Hidden File Inputs -->
        <input
          type="file"
          name="files[]"
          multiple="multiple"
          accept="image/*,.pdf,.doc,.docx"
          id="file-upload"
          data-bulk-upload-target="input"
          data-action="change->bulk-upload#handleFileSelect"
          class="hidden" />

        <!-- Hidden Camera Input -->
        <input
          type="file"
          name="camera_files[]"
          multiple="multiple"
          accept="image/*"
          capture="environment"
          id="camera-upload"
          data-bulk-upload-target="cameraInput"
          data-action="change->bulk-upload#handleFileSelect"
          class="hidden" />

        <!-- Selected Files List -->
        <div id="file-list" data-bulk-upload-target="fileList" class="mt-6 hidden">
          <h3 class="text-lg font-medium text-gray-900 mb-3">Selected Files (<span data-bulk-upload-target="fileCount">0</span>)</h3>
          <div class="bg-gray-50 rounded-lg border border-gray-200 divide-y divide-gray-200 max-h-96 overflow-y-auto">
            <!-- Files will be added here dynamically -->
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-8 flex justify-between items-center" data-bulk-upload-progress-target="uploadControls">
          <%= link_to "Cancel", credentials_path, class: "px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition-colors" %>

          <div class="flex items-center space-x-4">
            <button
              type="button"
              data-action="click->bulk-upload#clearFiles"
              data-bulk-upload-target="clearButton"
              class="hidden px-4 py-2 text-sm text-gray-600 hover:text-gray-800 transition-colors"
            >
              Clear All
            </button>
            <%= f.submit "Upload Credentials",
              data: { bulk_upload_target: "submitButton" },
              class: "px-8 py-3 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-lg font-medium hover:from-purple-700 hover:to-blue-700 transition-all shadow-md hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed",
              disabled: true %>
          </div>
        </div>

        <!-- Progress Display (Hidden by default) -->
        <div class="hidden mt-8" data-bulk-upload-progress-target="progressContainer">
          <!-- Progress Header -->
          <div class="mb-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-lg font-semibold text-gray-900">Upload Progress</h3>
              <span class="text-sm font-medium text-gray-600">
                <span data-bulk-upload-progress-target="progressCount">0</span> of
                <span data-bulk-upload-progress-target="totalCount">0</span> files processed
              </span>
            </div>

            <!-- Overall Progress Bar -->
            <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
              <div
                data-bulk-upload-progress-target="progressBar"
                class="bg-gradient-to-r from-purple-600 to-blue-600 h-3 rounded-full transition-all duration-500 ease-out"
                style="width: 0%"
              ></div>
            </div>
          </div>

          <!-- Individual File Progress -->
          <div class="space-y-3 max-h-96 overflow-y-auto" data-bulk-upload-progress-target="fileProgress">
            <!-- File progress items will be added dynamically -->
          </div>

          <!-- Completion Message -->
          <div class="hidden mt-6 p-4 rounded-lg" data-bulk-upload-progress-target="completionMessage">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3 flex-1">
                <h3 class="text-sm font-medium" data-bulk-upload-progress-target="completionTitle">Processing complete!</h3>
                <p class="mt-1 text-sm" data-bulk-upload-progress-target="completionText"></p>
                <div class="mt-4">
                  <%= link_to "View Credentials", credentials_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-lg font-medium hover:from-purple-700 hover:to-blue-700 transition-all shadow-md hover:shadow-lg" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Help Text -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">How bulk upload works</h3>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="list-disc list-inside space-y-1">
              <li>Upload multiple credential documents at once (PDF, images, etc.)</li>
              <li>Each file will be created as a separate credential</li>
              <li>Files are processed in the background - you can continue using the app</li>
              <li>Watch real-time progress as each file goes through 4 steps: Extracting → Processing → Creating Tags → Done</li>
              <li>AI will automatically analyze each document to extract title and dates</li>
              <li>You can review and edit the AI-extracted information after upload</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Hidden Template for File Progress Items -->
    <template data-bulk-upload-progress-target="fileItemTemplate">
      <div class="bg-white border border-gray-200 rounded-lg p-4 file-progress-item">
        <div class="flex items-start justify-between">
          <div class="flex-1 min-w-0">
            <div class="flex items-center">
              <div class="file-icon flex-shrink-0 mr-3">
                <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate file-name"></p>
                <p class="text-sm text-gray-500 file-status">Waiting...</p>
              </div>
            </div>

            <!-- Step Progress Indicators -->
            <div class="mt-3 grid grid-cols-4 gap-2 step-indicators">
              <div class="step-item text-center" data-step="extracting">
                <div class="step-circle mx-auto w-8 h-8 rounded-full border-2 border-gray-300 flex items-center justify-center text-gray-400">
                  <span class="step-number text-xs font-semibold">1</span>
                  <svg class="step-spinner hidden h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <svg class="step-check hidden h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <p class="step-label text-xs text-gray-600 mt-1">Extract</p>
              </div>

              <div class="step-item text-center" data-step="processing">
                <div class="step-circle mx-auto w-8 h-8 rounded-full border-2 border-gray-300 flex items-center justify-center text-gray-400">
                  <span class="step-number text-xs font-semibold">2</span>
                  <svg class="step-spinner hidden h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <svg class="step-check hidden h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <p class="step-label text-xs text-gray-600 mt-1">Process</p>
              </div>

              <div class="step-item text-center" data-step="creating_tags">
                <div class="step-circle mx-auto w-8 h-8 rounded-full border-2 border-gray-300 flex items-center justify-center text-gray-400">
                  <span class="step-number text-xs font-semibold">3</span>
                  <svg class="step-spinner hidden h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <svg class="step-check hidden h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <p class="step-label text-xs text-gray-600 mt-1">Tags</p>
              </div>

              <div class="step-item text-center" data-step="done">
                <div class="step-circle mx-auto w-8 h-8 rounded-full border-2 border-gray-300 flex items-center justify-center text-gray-400">
                  <span class="step-number text-xs font-semibold">4</span>
                  <svg class="step-check hidden h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <p class="step-label text-xs text-gray-600 mt-1">Done</p>
              </div>
            </div>
          </div>

          <!-- Status Icon -->
          <div class="ml-4 flex-shrink-0 status-icon">
            <!-- Will be updated based on status -->
          </div>
        </div>

        <!-- Error Message (Hidden by default) -->
        <div class="error-message hidden mt-3 p-3 bg-red-50 border border-red-200 rounded text-sm text-red-700"></div>
      </div>
    </template>

    <!-- Plan Limit Warning -->
    <% available_slots = current_user.max_credentials - current_user.credentials.count %>
    <% if available_slots <= 5 %>
      <div class="mt-4 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Approaching plan limit</h3>
            <p class="mt-1 text-sm text-yellow-700">
              You can upload <%= available_slots %> more credential<%= 's' if available_slots != 1 %> on your <%= current_user.plan.titleize %> plan.
              <%= link_to "Upgrade your plan", pricing_path, class: "font-medium underline hover:text-yellow-900" %> to upload more.
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
