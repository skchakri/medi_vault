<div class="min-h-screen bg-gradient-to-br from-purple-50 to-blue-50 pb-8 px-4 sm:px-6 lg:px-8" data-controller="credential-selection">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Medical Credentials</h1>
          <p class="mt-2 text-gray-600">Manage your medical documents and credentials</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3">
          <%= link_to new_credential_path, class: "inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Upload Credential
          <% end %>
          <%= link_to bulk_new_credentials_path, class: "inline-flex items-center justify-center px-6 py-3 border-2 border-purple-600 rounded-lg shadow-sm text-sm font-medium text-purple-600 bg-white hover:bg-purple-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Bulk Upload
          <% end %>
        </div>
      </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="bg-white rounded-lg shadow-md p-4 sm:p-6 mb-6">
      <%= form_with url: credentials_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-3 sm:gap-4" do |f| %>
        <%= f.hidden_field :status, value: params[:status] if params[:status].present? %>
        <% if params[:tag_ids].present? %>
          <% Array(params[:tag_ids]).reject(&:blank?).each do |tag_id| %>
            <%= f.hidden_field "tag_ids[]", value: tag_id %>
          <% end %>
        <% end %>

        <div class="flex-1">
          <label for="search" class="sr-only">Search credentials</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <%= f.text_field :search, placeholder: "Search by title or notes...", value: params[:search], class: "block w-full pl-10 pr-3 py-2 sm:py-3 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-purple-500 focus:border-purple-500" %>
          </div>
        </div>
        <div class="flex gap-3">
          <%= f.submit "Search", class: "w-full sm:w-auto px-4 sm:px-6 py-2 sm:py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 cursor-pointer" %>
          <% if params[:search].present? %>
            <%= link_to "Clear", credentials_path(status: params[:status], tag_ids: params[:tag_ids]), class: "w-full sm:w-auto px-4 sm:px-6 py-2 sm:py-3 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 text-center" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Tag Filter Section -->
    <% if @available_tags.any? %>
      <% selected_tag_ids = Array(params[:tag_ids]).reject(&:blank?).map(&:to_s) %>
      <div class="bg-white rounded-lg shadow-md p-4 sm:p-6 mb-6">
        <%= form_with url: credentials_path, method: :get, local: true,
          data: {
            controller: "tag-filter",
            tag_filter_target: "form",
            tag_filter_selected_tags_value: selected_tag_ids.to_json
          } do |f| %>
          <%= f.hidden_field :search, value: params[:search] if params[:search].present? %>
          <%= f.hidden_field :status, value: params[:status] if params[:status].present? %>

          <div class="mb-4">
            <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
              <h3 class="text-sm font-medium text-gray-700">Filter by Tags</h3>
              <% if selected_tag_ids.any? %>
                <%= link_to "Clear Filters", credentials_path(search: params[:search], status: params[:status]), class: "text-xs text-purple-600 hover:text-purple-800 font-medium" %>
              <% end %>
            </div>
          </div>

          <div class="w-full">
            <div class="grid grid-cols-2 gap-2 w-full max-w-full sm:flex sm:flex-wrap sm:gap-2">
              <% @available_tags.each do |tag| %>
                <% tag_id = tag.id.to_s %>
                <% selected = selected_tag_ids.blank? || selected_tag_ids.include?(tag_id) %>
                <button
                  type="button"
                  data-tag-filter-target="tag"
                  data-tag-id="<%= tag_id %>"
                  data-tag-color="<%= tag.color %>"
                  data-action="click->tag-filter#toggleTag"
                  class="w-full text-center px-3 py-1.5 rounded-full text-xs font-semibold transition-all duration-150 cursor-pointer hover:shadow-md active:scale-95 sm:w-auto sm:text-left sm:px-4 sm:py-2 sm:text-sm sm:flex-shrink-0"
                  style="<%= selected ? "background-color: #{tag.color}; color: white;" : "background-color: rgba(229, 231, 235, 0.5); color: #6B7280; border: 2px solid #{tag.color};" %>"
                  aria-pressed="<%= selected %>">
                  <%= tag.name %>
                </button>
              <% end %>
            </div>
          </div>

          <p class="mt-3 text-xs text-gray-500">
            <% if selected_tag_ids.blank? %>
              All tags are active. Click a tag to filter by that tag.
            <% else %>
              Showing credentials with selected tags. Click a tag to toggle.
            <% end %>
          </p>
        <% end %>
      </div>
    <% end %>

    <!-- Bulk Actions Toolbar (Hidden by default) -->
    <div data-credential-selection-target="toolbar" class="hidden mb-6 bg-white rounded-lg shadow-lg p-4 border-l-4 border-purple-600">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <span class="text-sm font-medium text-gray-700">
            <span data-credential-selection-target="count">0</span> credential(s) selected
          </span>
          <button type="button"
                  data-action="click->credential-selection#clearSelection"
                  class="text-sm text-gray-500 hover:text-gray-700 underline">
            Clear selection
          </button>
        </div>
        <div class="flex gap-2">
          <button type="button"
                  data-action="click->credential-selection#showShareModal"
                  class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 transition-all">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            Share via Email
          </button>
        </div>
      </div>
    </div>

    <!-- Share Modal (Hidden by default) -->
    <div data-credential-selection-target="modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" style="display: none;">
      <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-lg bg-white">
        <div class="mt-3">
          <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Share Selected Credentials</h3>
          <%= form_with url: bulk_share_credentials_path, method: :post, local: true, class: "space-y-4" do |f| %>
            <div data-credential-selection-target="credentialIds"></div>

            <div>
              <label for="recipient_email" class="block text-sm font-medium text-gray-700 mb-1">Recipient Email</label>
              <%= f.email_field :recipient_email, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500", placeholder: "recipient@example.com" %>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message (Optional)</label>
              <%= f.text_area :message, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500", placeholder: "Add a message..." %>
            </div>

            <div class="flex gap-3 pt-4">
              <%= f.submit "Send Credentials", class: "flex-1 px-4 py-2 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-lg font-medium hover:from-purple-700 hover:to-blue-700 transition-all" %>
              <button type="button"
                      data-action="click->credential-selection#hideShareModal"
                      class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition-colors">
                Cancel
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Main Credentials Table Card -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <!-- Status Tabs -->
      <%
        current_status = params[:status] || 'all'
        all_count = current_user.credentials.count
        active_count = current_user.credentials.where(status: [:active, :pending]).where("end_date > ? OR end_date IS NULL", 30.days.from_now).count
        expiring_count = current_user.credentials.where("end_date <= ? AND end_date > ?", 30.days.from_now, Date.today).count
        expired_count = current_user.credentials.where("end_date <= ?", Date.today).count
      %>

      <div class="p-4 bg-gray-50">
        <div class="flex flex-wrap gap-3">
          <%= link_to credentials_path(status: 'all'), class: "inline-flex items-center px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 shadow-sm #{current_status == 'all' ? 'bg-gray-700 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" do %>
            ALL
            <span class="ml-2 px-2.5 py-0.5 rounded-full text-xs font-bold bg-white bg-opacity-30"><%= all_count %></span>
          <% end %>
          <%= link_to credentials_path(status: 'active'), class: "inline-flex items-center px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 shadow-sm #{current_status == 'active' ? 'bg-green-600 text-white' : 'bg-green-100 text-green-800 hover:bg-green-200'}" do %>
            ACTIVE
            <span class="ml-2 px-2.5 py-0.5 rounded-full text-xs font-bold #{current_status == 'active' ? 'bg-white bg-opacity-30' : 'bg-green-200'}"><%= active_count %></span>
          <% end %>
          <%= link_to credentials_path(status: 'expiring_soon'), class: "inline-flex items-center px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 shadow-sm #{current_status == 'expiring_soon' ? 'bg-orange-600 text-white' : 'bg-orange-100 text-orange-800 hover:bg-orange-200'}" do %>
            EXPIRING SOON
            <span class="ml-2 px-2.5 py-0.5 rounded-full text-xs font-bold #{current_status == 'expiring_soon' ? 'bg-white bg-opacity-30' : 'bg-orange-200'}"><%= expiring_count %></span>
          <% end %>
          <%= link_to credentials_path(status: 'expired'), class: "inline-flex items-center px-6 py-3 rounded-lg text-sm font-semibold transition-all duration-200 shadow-sm #{current_status == 'expired' ? 'bg-red-600 text-white' : 'bg-red-100 text-red-800 hover:bg-red-200'}" do %>
            EXPIRED
            <span class="ml-2 px-2.5 py-0.5 rounded-full text-xs font-bold #{current_status == 'expired' ? 'bg-white bg-opacity-30' : 'bg-red-200'}"><%= expired_count %></span>
          <% end %>
        </div>
      </div>

      <!-- Table -->
      <% if @credentials.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="w-12 px-6 py-3 text-left">
                  <input type="checkbox"
                         data-credential-selection-target="selectAll"
                         data-action="change->credential-selection#toggleAll"
                         class="h-4 w-4 text-purple-600 rounded border-gray-300 focus:ring-purple-500 cursor-pointer">
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  Credential Name
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  Issuer
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  Type
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  Expiration
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  Status
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @credentials.each do |credential| %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <!-- Checkbox -->
                  <td class="px-6 py-4">
                    <input type="checkbox"
                           data-credential-selection-target="checkbox"
                           data-credential-id="<%= credential.id %>"
                           data-action="change->credential-selection#toggleCredential"
                           class="h-4 w-4 text-purple-600 rounded border-gray-300 focus:ring-purple-500 cursor-pointer">
                  </td>

                  <!-- Credential Name -->
                  <td class="px-6 py-4">
                    <div class="flex flex-col">
                      <div class="text-sm font-semibold text-gray-900"><%= credential.title %></div>
                      <div class="text-xs text-gray-500">ID: <%= credential.credential_number || 'N/A' %></div>
                    </div>
                  </td>

                  <!-- Issuer -->
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900"><%= credential.issuing_organization || 'N/A' %></div>
                  </td>

                  <!-- Type (Tags) -->
                  <td class="px-6 py-4">
                    <div class="flex flex-wrap gap-1">
                      <% if credential.tags.any? %>
                        <% credential.tags.limit(2).each do |tag| %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                style="background-color: <%= tag.color %>20; color: <%= tag.color %>; border: 1px solid <%= tag.color %>40;">
                            <%= tag.name %>
                          </span>
                        <% end %>
                        <% if credential.tags.count > 2 %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                            +<%= credential.tags.count - 2 %>
                          </span>
                        <% end %>
                      <% else %>
                        <span class="text-sm text-gray-400">No tags</span>
                      <% end %>
                    </div>
                  </td>

                  <!-- Expiration -->
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900"><%= credential.displayable_end_date %></div>
                  </td>

                  <!-- Status -->
                  <td class="px-6 py-4">
                    <% if credential.expired? %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800 uppercase">
                        Expired
                      </span>
                    <% elsif credential.expiring_soon? %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800 uppercase">
                        Expiring Soon
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800 uppercase">
                        Active
                      </span>
                    <% end %>
                  </td>

                  <!-- Actions -->
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <%= link_to credential_path(credential), class: "text-purple-600 hover:text-purple-800 transition-colors" do %>
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      <% end %>
                      <%= link_to edit_credential_path(credential), class: "text-blue-600 hover:text-blue-800 transition-colors" do %>
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      <% end %>
                      <%= link_to credential_path(credential), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-800 transition-colors" do %>
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if @credentials.respond_to?(:total_pages) && @credentials.total_pages > 1 %>
          <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
            <div class="flex items-center justify-between">
              <div class="text-sm text-gray-700">
                Showing <span class="font-medium"><%= @credentials.offset_value + 1 %></span> to
                <span class="font-medium"><%= [@credentials.offset_value + @credentials.limit_value, @credentials.total_count].min %></span> of
                <span class="font-medium"><%= @credentials.total_count %></span> credentials
              </div>
              <nav class="flex gap-2">
                <% if @credentials.prev_page %>
                  <%= link_to credentials_path(page: @credentials.prev_page, status: current_status),
                      class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
                    Previous
                  <% end %>
                <% end %>
                <% if @credentials.next_page %>
                  <%= link_to credentials_path(page: @credentials.next_page, status: current_status),
                      class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
                    Next
                  <% end %>
                <% end %>
              </nav>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-12 px-4">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No credentials</h3>
          <p class="mt-1 text-sm text-gray-500">
            <% if current_status != 'all' %>
              No <%= current_status.humanize.downcase %> credentials found.
            <% else %>
              Get started by uploading your first medical credential.
            <% end %>
          </p>
          <div class="mt-6">
            <%= link_to new_credential_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 transition-all" do %>
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Upload Credential
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
