<div class="min-h-screen bg-gradient-to-br from-purple-50 to-blue-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Medical Credentials</h1>
          <p class="mt-2 text-gray-600">Manage your medical documents and credentials</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3">
          <%= link_to new_credential_path, class: "inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Upload Credential
          <% end %>
          <%= link_to bulk_new_credentials_path, class: "inline-flex items-center justify-center px-6 py-3 border border-purple-600 rounded-lg shadow-sm text-sm font-medium text-purple-600 bg-white hover:bg-purple-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Bulk Upload
          <% end %>
        </div>
      </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="bg-white rounded-lg shadow-md p-4 sm:p-6 mb-6">
      <%= form_with url: credentials_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-3 sm:gap-4" do |f| %>
        <div class="flex-1">
          <label for="search" class="sr-only">Search credentials</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <%= f.text_field :search, placeholder: "Search by title or notes...", value: params[:search], class: "block w-full pl-10 pr-3 py-2 sm:py-3 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-purple-500 focus:border-purple-500" %>
          </div>
        </div>
        <div class="flex gap-3">
          <%= f.submit "Search", class: "w-full sm:w-auto px-4 sm:px-6 py-2 sm:py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 cursor-pointer" %>
          <% if params[:search].present? %>
            <%= link_to "Clear", credentials_path, class: "w-full sm:w-auto px-4 sm:px-6 py-2 sm:py-3 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 text-center" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Tag Summary Section -->
    <% if @available_tags.any? %>
      <div class="bg-white rounded-lg shadow-md p-4 sm:p-6 mb-6">
        <h3 class="text-sm font-medium text-gray-700 mb-4">Tags Summary</h3>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3">
          <% @available_tags.each do |tag| %>
            <% tag_count = @credentials.joins(:tags).where(tags: { id: tag.id }).distinct.count %>
            <div class="flex flex-col items-center p-3 rounded-lg border border-gray-200 hover:shadow-md transition-shadow cursor-pointer"
              style="background-color: <%= tag.color %>08;"
              data-action="click->window#location"
              data-href="<%= credentials_path(tag_ids: [tag.id]) %>">
              <div class="w-8 h-8 rounded-full mb-2" style="background-color: <%= tag.color %>"></div>
              <p class="text-xs font-medium text-gray-900 text-center line-clamp-2"><%= tag.name %></p>
              <p class="text-lg font-bold mt-2" style="color: <%= tag.color %>"><%= tag_count %></p>
              <p class="text-xs text-gray-500">credential<%= tag_count != 1 ? 's' : '' %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Tag Filter Section -->
    <% if @available_tags.any? %>
      <% selected_tag_ids = Array(params[:tag_ids]).reject(&:blank?).map(&:to_s) %>
      <div class="bg-white rounded-lg shadow-md p-4 sm:p-6 mb-6">
        <%= form_with url: credentials_path, method: :get, local: true,
          data: {
            controller: "tag-filter",
            tag_filter_target: "form",
            tag_filter_selected_tags_value: selected_tag_ids.to_json
          } do |f| %>
          <%= f.hidden_field :search, value: params[:search] if params[:search].present? %>

          <div class="flex items-center justify-between mb-4">
            <h3 class="text-sm font-medium text-gray-700">Filter by Tags</h3>
            <% if selected_tag_ids.any? %>
              <%= link_to "Clear Filters", credentials_path(search: params[:search]), class: "text-xs text-purple-600 hover:text-purple-800 font-medium" %>
            <% end %>
          </div>

          <div class="flex flex-wrap gap-2">
            <% @available_tags.each do |tag| %>
              <% tag_id = tag.id.to_s %>
              <% selected = selected_tag_ids.blank? || selected_tag_ids.include?(tag_id) %>
              <button
                type="button"
                data-tag-filter-target="tag"
                data-tag-id="<%= tag_id %>"
                data-action="click->tag-filter#toggleTag"
                class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium transition-all duration-150 cursor-pointer hover:shadow-md <%= selected ? '' : 'opacity-50 ring-2 ring-offset-2' %>"
                style="background-color: <%= selected ? tag.color : '#E5E7EB' %>; color: <%= selected ? '#FFFFFF' : '#6B7280' %>; ring-color: <%= tag.color %>"
                aria-pressed="<%= selected %>">
                <span class="w-2 h-2 rounded-full bg-white <%= 'bg-opacity-80' if selected %>"></span>
                <span><%= tag.name %></span>
                <% if tag.usage_count > 0 %>
                  <span class="text-xs <%= selected ? 'bg-white bg-opacity-20' : 'bg-gray-200' %> px-1.5 py-0.5 rounded-full">
                    <%= tag.usage_count %>
                  </span>
                <% end %>
              </button>
            <% end %>
          </div>

          <p class="mt-3 text-xs text-gray-500">
            <% if selected_tag_ids.blank? %>
              All tags are active. Click a tag to filter by that tag.
            <% else %>
              Showing credentials with selected tags. Click a tag to toggle.
            <% end %>
          </p>
        <% end %>
      </div>
    <% end %>

    <!-- Credentials Cards View -->
    <% if @credentials.any? %>
      <% # Group credentials by status %>
      <% grouped_creds = @credentials.group_by do |c|
        if c.expired?
          'expired'
        elsif c.expiring_soon?
          'expiring_soon'
        elsif c.days_until_expiration.nil?
          'active'
        elsif c.days_until_expiration > 180
          'active'
        elsif c.days_until_expiration > 30
          'upcoming'
        else
          'active'
        end
      end %>

      <% # Define order and styling for status groups %>
      <% status_order = { 'active' => 0, 'upcoming' => 1, 'expiring_soon' => 2, 'expired' => 3 } %>
      <% status_info = {
        'active' => { color: 'green', label: 'Active', description: '180+ days remaining' },
        'upcoming' => { color: 'yellow', label: 'Upcoming', description: '30-180 days remaining' },
        'expiring_soon' => { color: 'orange', label: 'Expiring Soon', description: 'Less than 30 days' },
        'expired' => { color: 'red', label: 'Expired', description: 'Past expiration date' }
      } %>

      <% grouped_creds.sort_by { |status, _| status_order[status] }.each do |status_group, creds| %>
        <% info = status_info[status_group] %>
        <div class="mb-8">
          <!-- Section Header -->
          <div class="mb-4 flex items-center gap-3">
            <div class="w-1 h-6 rounded-full bg-<%= info[:color] %>-500"></div>
            <div>
              <h2 class="text-lg font-bold text-gray-900"><%= info[:label] %></h2>
              <p class="text-sm text-gray-600"><%= info[:description] %></p>
            </div>
          </div>

          <!-- Credentials within status group -->
          <div class="space-y-3">
            <% creds.sort_by { |c| c.end_date || Date.today }.each do |credential| %>
              <div class="bg-white rounded-lg shadow hover:shadow-md transition-shadow border-l-4 border-<%= info[:color] %>-500 overflow-hidden">
                <!-- Desktop View -->
                <div class="hidden sm:block p-4 sm:p-6">
                  <div class="flex items-center gap-4 sm:gap-6">
                    <!-- Left: Document Preview -->
                    <div class="flex-shrink-0 w-16 h-16 sm:w-20 sm:h-20 bg-gradient-to-br from-<%= info[:color] %>-100 to-<%= info[:color] %>-50 rounded-lg flex items-center justify-center">
                      <% if credential.file.attached? %>
                        <% if credential.file.image? %>
                          <%= image_tag credential.file, class: "w-full h-full object-cover rounded-lg" %>
                        <% else %>
                          <svg class="w-8 h-8 sm:w-10 sm:h-10 text-<%= info[:color] %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                          </svg>
                        <% end %>
                      <% else %>
                        <svg class="w-8 h-8 sm:w-10 sm:h-10 text-<%= info[:color] %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                      <% end %>
                    </div>

                    <!-- Middle: Credential Details -->
                    <div class="flex-1 min-w-0">
                      <h3 class="text-base sm:text-lg font-bold text-gray-900 truncate"><%= credential.title %></h3>
                      <% if credential.notes.present? %>
                        <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= truncate(credential.notes, length: 100) %></p>
                      <% end %>

                      <!-- Tags Display -->
                      <% if credential.tags.any? %>
                        <div class="flex flex-wrap gap-1.5 mt-2">
                          <% credential.tags.limit(5).each do |tag| %>
                            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium" style="background-color: <%= tag.color %>20; color: <%= tag.color %>">
                              <span class="w-1.5 h-1.5 rounded-full" style="background-color: <%= tag.color %>"></span>
                              <%= tag.name %>
                            </span>
                          <% end %>
                          <% if credential.tags.count > 5 %>
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                              +<%= credential.tags.count - 5 %> more
                            </span>
                          <% end %>
                        </div>
                      <% end %>

                      <div class="flex flex-col sm:flex-row sm:gap-6 mt-3 text-sm">
                        <div>
                          <p class="text-gray-500">Start Date</p>
                          <p class="font-medium text-gray-900"><%= credential.displayable_start_date %></p>
                        </div>
                        <div>
                          <p class="text-gray-500">Expiry Date</p>
                          <p class="font-medium text-<%= info[:color] %>-700"><%= credential.displayable_end_date %></p>
                        </div>
                      </div>
                    </div>

                    <!-- Right: Actions -->
                    <div class="flex-shrink-0 flex flex-col gap-2">
                      <%= link_to credential_path(credential), class: "inline-flex items-center justify-center px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      <% end %>
                      <%= link_to edit_credential_path(credential), class: "inline-flex items-center justify-center px-3 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 transition-all" do %>
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      <% end %>
                      <%= link_to credential_path(credential), method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-flex items-center justify-center px-3 py-2 border border-red-300 rounded-lg text-sm font-medium text-red-600 bg-red-50 hover:bg-red-100 transition-colors" do %>
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                </div>

                <!-- Mobile View -->
                <div class="sm:hidden p-4">
                  <!-- Preview and Title -->
                  <div class="flex gap-3 mb-3">
                    <div class="flex-shrink-0 w-14 h-14 bg-gradient-to-br from-<%= info[:color] %>-100 to-<%= info[:color] %>-50 rounded-lg flex items-center justify-center">
                      <% if credential.file.attached? && credential.file.image? %>
                        <%= image_tag credential.file, class: "w-full h-full object-cover rounded-lg" %>
                      <% else %>
                        <svg class="w-7 h-7 text-<%= info[:color] %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                      <% end %>
                    </div>
                    <div class="flex-1">
                      <h3 class="font-bold text-gray-900 text-sm line-clamp-2"><%= credential.title %></h3>
                      <p class="text-xs text-gray-600 mt-0.5 line-clamp-1"><%= truncate(credential.notes, length: 50) %></p>
                    </div>
                  </div>

                  <!-- Tags Display -->
                  <% if credential.tags.any? %>
                    <div class="flex flex-wrap gap-1 mb-2">
                      <% credential.tags.limit(3).each do |tag| %>
                        <span class="inline-flex items-center gap-1 px-1.5 py-0.5 rounded-full text-xs font-medium" style="background-color: <%= tag.color %>20; color: <%= tag.color %>">
                          <span class="w-1 h-1 rounded-full" style="background-color: <%= tag.color %>"></span>
                          <%= tag.name %>
                        </span>
                      <% end %>
                      <% if credential.tags.count > 3 %>
                        <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                          +<%= credential.tags.count - 3 %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>

                  <!-- Dates -->
                  <div class="space-y-2 mb-3 text-xs">
                    <div class="flex justify-between">
                      <span class="text-gray-500">Start:</span>
                      <span class="text-gray-900 font-medium"><%= credential.displayable_start_date %></span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-500">Expiry:</span>
                      <span class="text-<%= info[:color] %>-700 font-medium"><%= credential.displayable_end_date %></span>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="flex gap-2">
                    <%= link_to credential_path(credential), class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 rounded text-xs font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
                      View
                    <% end %>
                    <%= link_to edit_credential_path(credential), class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-transparent rounded text-xs font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700" do %>
                      Edit
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Pagination -->
      <% if @credentials.respond_to?(:total_pages) && @credentials.total_pages > 1 %>
        <div class="mt-8 flex items-center justify-between px-4 py-3 sm:px-6 bg-white rounded-lg shadow">
          <div class="text-sm text-gray-700">
            Showing <span class="font-medium"><%= @credentials.offset_value + 1 %></span> to <span class="font-medium"><%= [@credentials.offset_value + @credentials.limit_value, @credentials.total_count].min %></span> of <span class="font-medium"><%= @credentials.total_count %></span>
          </div>
          <nav class="flex gap-2">
            <% if @credentials.prev_page %>
              <%= link_to credentials_path(page: @credentials.prev_page), class: "px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>Previous<% end %>
            <% end %>
            <% if @credentials.next_page %>
              <%= link_to credentials_path(page: @credentials.next_page), class: "px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>Next<% end %>
            <% end %>
          </nav>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-lg shadow text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No credentials</h3>
        <p class="mt-1 text-sm text-gray-500">
          <% if params[:search].present? %>
            No credentials found matching your search.
          <% else %>
            Get started by uploading your first medical credential.
          <% end %>
        </p>
        <div class="mt-6">
          <%= link_to new_credential_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 transition-all" do %>
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Upload Credential
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
