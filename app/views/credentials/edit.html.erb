<div class="min-h-screen bg-gradient-to-br from-purple-50 to-blue-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to credential_path(@credential), class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors duration-150" do %>
        <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Credential
      <% end %>
    </div>

    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center h-16 w-16 bg-gradient-to-br from-purple-100 to-blue-100 rounded-full mb-4">
        <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Edit Credential</h1>
      <p class="mt-2 text-gray-600">Update your credential information</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md p-8">
      <%= render 'form', credential: @credential %>
    </div>

    <!-- Alerts Management Card -->
    <div class="mt-6 bg-white rounded-lg shadow-md p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Expiration Alerts</h2>

      <% if @credential.alerts.any? %>
        <div class="space-y-3 mb-4">
          <% @credential.alerts.each do |alert| %>
            <div class="flex items-center justify-between p-3 bg-blue-50 border border-blue-200 rounded-lg">
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900">
                  <%= alert.offset_days %> day<%= alert.offset_days != 1 ? 's' : '' %> before
                </p>
                <p class="text-xs text-gray-600 mt-1">
                  Alert on <%= alert.alert_date.strftime('%b %d, %Y') %>
                </p>
              </div>
              <div class="flex items-center gap-2">
                <span class="px-2 py-1 bg-<%= alert.status == 'pending' ? 'yellow' : alert.status == 'sent' ? 'green' : 'gray' %>-100 text-<%= alert.status == 'pending' ? 'yellow' : alert.status == 'sent' ? 'green' : 'gray' %>-800 rounded text-xs font-medium">
                  <%= alert.status.humanize %>
                </span>
                <%= link_to alert_path(alert), method: :delete, data: { confirm: "Delete this alert?" }, class: "text-red-600 hover:text-red-900 transition-colors" do %>
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-600 mb-4">No alerts created yet.</p>
      <% end %>

      <!-- Add Alert Button -->
      <button type="button" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-150 mb-4" onclick="document.getElementById('alert-section-edit').classList.toggle('hidden')">
        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add New Alert
      </button>

      <!-- Add Alert Form (Hidden by default) -->
      <div id="alert-section-edit" class="hidden pt-4 border-t border-gray-200">
        <p class="text-xs font-medium text-gray-600 mb-3">Select when to be alerted:</p>

        <%= form_with url: credential_alerts_path(@credential), local: true, method: :post, class: "space-y-3" do |f| %>
          <% alert_options = [
            { label: '1 day before', days: 1 },
            { label: '1 week before', days: 7 },
            { label: '1 month before', days: 30 },
            { label: '3 months before', days: 90 }
          ] %>

          <% alert_options.each do |option| %>
            <label class="flex items-center p-2 border border-gray-300 rounded cursor-pointer hover:bg-purple-50 transition-colors has-[:checked]:border-purple-500 has-[:checked]:bg-purple-50">
              <%= f.radio_button :offset_days, option[:days], { class: "h-4 w-4 text-purple-600" } %>
              <div class="flex-1 ml-2 flex items-center justify-between">
                <span class="text-xs font-medium text-gray-900"><%= option[:label] %></span>
                <% if @credential.end_date %>
                  <% alert_date = @credential.end_date - option[:days].days %>
                  <span class="text-xs text-gray-600"><%= alert_date.strftime('%b %d') %></span>
                <% end %>
              </div>
            </label>
          <% end %>

          <div class="flex gap-2 pt-2">
            <%= f.submit "Add Alert", class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-transparent rounded-lg shadow-sm text-xs font-medium text-white bg-purple-600 hover:bg-purple-700 transition-colors" %>
            <button type="button" onclick="document.getElementById('alert-section-edit').classList.add('hidden')" class="flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 rounded-lg shadow-sm text-xs font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
              Cancel
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Danger Zone -->
    <div class="mt-6 bg-red-50 border border-red-200 rounded-lg p-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-red-800">Danger Zone</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>Once you delete a credential, there is no going back. Please be certain.</p>
          </div>
          <div class="mt-4">
            <%= link_to credential_path(@credential),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this credential? This action cannot be undone." },
              class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-lg shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-150" do %>
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
              Delete this credential
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
