<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

  body {
    font-family: 'Inter', sans-serif;
  }

  .gradient-text {
    background: linear-gradient(135deg, #9333ea 0%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (max-width: 640px) {
    nav {
      padding: 0 1rem;
    }
  }
</style>

<!-- Navigation -->
<nav class="bg-white border-b border-gray-200 fixed w-full top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8">
    <div class="flex justify-between items-center h-14 sm:h-16">
      <div class="flex items-center flex-shrink-0">
        <%= link_to root_path, class: "flex items-center" do %>
          <% theme = ThemeSetting.current %>
          <% if theme.logo.attached? %>
            <%= image_tag theme.logo, alt: "MediVault", class: "h-8 sm:h-10 w-auto" %>
          <% else %>
            <span class="text-xl sm:text-2xl font-bold gradient-text whitespace-nowrap">
              mediVault
            </span>
          <% end %>
        <% end %>
      </div>
      <div class="hidden sm:flex sm:items-center sm:space-x-4">
        <span class="text-gray-600 text-sm">Don't have an account?</span>
        <%= link_to "Sign Up", new_registration_path(resource_name), class: "bg-gray-900 text-white px-6 py-2 rounded-lg hover:bg-gray-800 font-medium text-sm" %>
      </div>
      <div class="flex sm:hidden">
        <%= link_to "Sign Up", new_registration_path(resource_name), class: "bg-gray-900 text-white px-4 py-1.5 rounded-lg hover:bg-gray-800 font-medium text-xs" %>
      </div>
    </div>
  </div>
</nav>

<!-- Sign In Form -->
<div class="pt-14 sm:pt-24 pb-8 sm:pb-12 px-4 sm:px-6 min-h-screen flex items-center justify-center bg-gray-50">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-lg sm:rounded-xl shadow-md sm:shadow-lg p-5 sm:p-6 md:p-8">
      <div class="text-center mb-6 sm:mb-8">
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-1 sm:mb-2">Welcome Back</h1>
        <p class="text-sm sm:text-base text-gray-600">Sign in to access your credentials</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5 sm:space-y-6" }) do |f| %>
        <!-- Email -->
        <div>
          <label for="user_email" class="block text-sm font-medium text-gray-700 mb-2">
            Email
          </label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email", required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        </div>

        <!-- Password -->
        <div>
          <label for="user_password" class="block text-sm font-medium text-gray-700 mb-2">
            Password
          </label>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter your password", required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        </div>

        <!-- Remember Me & Forgot Password -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-0">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500" %>
              <%= f.label :remember_me, "Remember me", class: "ml-2 text-xs sm:text-sm text-gray-600" %>
            </div>
          <% end %>
          <% if devise_mapping.recoverable? %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-xs sm:text-sm text-purple-600 hover:text-purple-700 font-medium" %>
          <% end %>
        </div>

        <!-- Submit Button -->
        <%= f.submit "Sign In", class: "w-full bg-gray-900 text-white px-4 sm:px-6 py-3 sm:py-4 rounded-lg hover:bg-gray-800 active:bg-gray-950 font-semibold text-base sm:text-lg transition-colors cursor-pointer" %>
      <% end %>

      <!-- OR Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">Or continue with</span>
        </div>
      </div>

      <!-- Google OAuth Button -->
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full flex items-center justify-center gap-3 bg-white border border-gray-300 text-gray-700 px-4 sm:px-6 py-3 sm:py-4 rounded-lg hover:bg-gray-50 active:bg-gray-100 font-semibold text-base sm:text-lg transition-colors" do %>
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span>Sign in with Google</span>
      <% end %>

      <p class="text-center text-gray-600 text-xs sm:text-sm mt-4 sm:mt-6">
        Don't have an account?
        <%= link_to "Sign up for free", new_registration_path(resource_name), class: "text-purple-600 hover:text-purple-700 font-semibold" %>
      </p>
    </div>

    <!-- Security Badge -->
    <div class="mt-6 sm:mt-8 text-center px-3">
      <div class="inline-flex items-center gap-2 text-xs sm:text-sm text-gray-600">
        <svg class="w-4 h-4 text-purple-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span>Your data is encrypted and HIPAA compliant</span>
      </div>
    </div>
  </div>
</div>
