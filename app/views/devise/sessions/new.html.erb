<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

  body {
    font-family: 'Inter', sans-serif;
  }

  .gradient-text {
    background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (max-width: 640px) {
    nav {
      padding: 0 1rem;
    }
  }
</style>

<!-- Navigation -->
<nav class="bg-white border-b border-gray-200 fixed w-full top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8">
    <div class="flex justify-between items-center h-14 sm:h-16">
      <div class="flex items-center flex-shrink-0">
        <%= link_to root_path, class: "text-xl sm:text-2xl font-bold gradient-text whitespace-nowrap" do %>
          mediVault
        <% end %>
      </div>
      <div class="hidden sm:flex sm:items-center sm:space-x-4">
        <span class="text-gray-600 text-sm">Don't have an account?</span>
        <%= link_to "Sign Up", new_registration_path(resource_name), class: "bg-gray-900 text-white px-6 py-2 rounded-lg hover:bg-gray-800 font-medium text-sm" %>
      </div>
      <div class="flex sm:hidden">
        <%= link_to "Sign Up", new_registration_path(resource_name), class: "bg-gray-900 text-white px-4 py-1.5 rounded-lg hover:bg-gray-800 font-medium text-xs" %>
      </div>
    </div>
  </div>
</nav>

<!-- Sign In Form -->
<div class="pt-14 sm:pt-24 pb-8 sm:pb-12 px-4 sm:px-6 min-h-screen flex items-center justify-center bg-gray-50">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-lg sm:rounded-xl shadow-md sm:shadow-lg p-5 sm:p-6 md:p-8">
      <div class="text-center mb-6 sm:mb-8">
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-1 sm:mb-2">Welcome Back</h1>
        <p class="text-sm sm:text-base text-gray-600">Sign in to access your credentials</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5 sm:space-y-6" }) do |f| %>
        <!-- Email -->
        <div>
          <label for="user_email" class="block text-sm font-medium text-gray-700 mb-2">
            Email
          </label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email", required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
        </div>

        <!-- Password -->
        <div>
          <label for="user_password" class="block text-sm font-medium text-gray-700 mb-2">
            Password
          </label>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter your password", required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
        </div>

        <!-- Remember Me & Forgot Password -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-0">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "w-4 h-4 text-cyan-600 bg-gray-100 border-gray-300 rounded focus:ring-cyan-500" %>
              <%= f.label :remember_me, "Remember me", class: "ml-2 text-xs sm:text-sm text-gray-600" %>
            </div>
          <% end %>
          <% if devise_mapping.recoverable? %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-xs sm:text-sm text-cyan-600 hover:text-cyan-700 font-medium" %>
          <% end %>
        </div>

        <!-- Submit Button -->
        <%= f.submit "Sign In", class: "w-full bg-gray-900 text-white px-4 sm:px-6 py-3 sm:py-4 rounded-lg hover:bg-gray-800 active:bg-gray-950 font-semibold text-base sm:text-lg transition-colors cursor-pointer" %>

        <p class="text-center text-gray-600 text-xs sm:text-sm mt-4 sm:mt-6">
          Don't have an account?
          <%= link_to "Sign up for free", new_registration_path(resource_name), class: "text-cyan-600 hover:text-cyan-700 font-semibold" %>
        </p>
      <% end %>
    </div>

    <!-- Security Badge -->
    <div class="mt-6 sm:mt-8 text-center px-3">
      <div class="inline-flex items-center gap-2 text-xs sm:text-sm text-gray-600">
        <svg class="w-4 h-4 text-cyan-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span>Your data is encrypted and HIPAA compliant</span>
      </div>
    </div>
  </div>
</div>
