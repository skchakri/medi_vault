<% content_for :head do %>
  <meta name="csrf-token" content="<%= form_authenticity_token %>">
<% end %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

  body {
    font-family: 'Inter', sans-serif;
  }

  .gradient-text {
    background: linear-gradient(135deg, #9333ea 0%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (max-width: 640px) {
    nav {
      padding: 0 1rem;
    }
  }
</style>

<!-- Navigation -->
<nav class="bg-white border-b border-gray-200 fixed w-full top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8">
    <div class="flex justify-between items-center h-14 sm:h-16">
      <div class="flex items-center flex-shrink-0">
        <%= link_to root_path, class: "flex items-center" do %>
          <% theme = ThemeSetting.current %>
          <% if theme.logo.attached? %>
            <%= image_tag theme.logo, alt: "MediVault", class: "h-8 sm:h-10 w-auto" %>
          <% else %>
            <span class="text-xl sm:text-2xl font-bold gradient-text whitespace-nowrap">
              mediVault
            </span>
          <% end %>
        <% end %>
      </div>
      <div class="hidden sm:flex sm:items-center sm:space-x-4">
        <span class="text-gray-600 text-sm">Already have an account?</span>
        <%= link_to "Sign In", new_session_path(resource_name), class: "text-purple-600 hover:text-purple-700 font-semibold text-sm" %>
      </div>
      <div class="flex sm:hidden">
        <%= link_to "Sign In", new_session_path(resource_name), class: "text-purple-600 hover:text-purple-700 font-semibold text-sm" %>
      </div>
    </div>
  </div>
</nav>

<!-- Registration Form -->
<div class="pt-14 sm:pt-24 pb-8 sm:pb-12 px-4 sm:px-6 min-h-screen bg-gray-50">
  <div class="w-full max-w-3xl mx-auto">
    <div class="bg-white rounded-lg sm:rounded-xl shadow-md sm:shadow-lg p-5 sm:p-6 md:p-8 lg:p-10">
      <div class="text-center mb-6 sm:mb-8">
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-1 sm:mb-2">Create Your Account</h1>
        <p class="text-sm sm:text-base text-gray-600">Start managing your medical credentials securely</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 sm:space-y-6", data: { controller: "npi-lookup" } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- NPI Verification Section (First) -->
        <div class="border-b border-gray-200 pb-4 sm:pb-5">
          <h2 class="text-sm sm:text-base font-semibold text-gray-900 mb-3 sm:mb-4">NPI Verification</h2>
          <p class="text-xs sm:text-sm text-gray-600 mb-4">Verify your National Provider Identifier to auto-fill your profile information.</p>

          <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
            <div class="flex-1">
              <label for="user_npi" class="block text-sm font-medium text-gray-700 mb-2">
                NPI (National Provider Identifier) <span class="text-red-500">*</span>
              </label>
              <%= f.text_field :npi,
                autocomplete: "off",
                placeholder: "1234567890",
                maxlength: 10,
                pattern: "[0-9]{10}",
                inputmode: "numeric",
                required: true,
                data: { "npi-lookup-target": "npiInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
              <p class="text-xs sm:text-sm text-gray-500 mt-1">10-digit medical registration number</p>
            </div>

            <div class="flex items-end">
              <button type="button"
                data-action="click->npi-lookup#performLookup"
                data-npi-lookup-target="lookupButton"
                data-turbo="false"
                class="w-full sm:w-auto px-4 sm:px-6 py-3 bg-purple-600 text-white rounded-lg text-sm font-medium hover:bg-purple-700 transition-colors cursor-pointer">
                Verify NPI
              </button>
            </div>
          </div>

          <!-- NPI Status Message -->
          <div class="mt-3" data-npi-lookup-target="npiStatus"></div>
          <div class="mt-2" data-npi-lookup-target="statusMessage"></div>
        </div>

        <!-- Personal Information (Disabled until NPI verified) -->
        <div class="border-b border-gray-200 pb-4 sm:pb-5" data-npi-lookup-target="fieldsContainer">
          <h2 class="text-sm sm:text-base font-semibold text-gray-900 mb-3 sm:mb-4">Personal Information</h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
            <div>
              <label for="user_first_name" class="block text-sm font-medium text-gray-700 mb-2">
                First Name <span class="text-red-500">*</span>
              </label>
              <%= f.text_field :first_name,
                autocomplete: "given-name",
                placeholder: "John",
                required: true,
                disabled: true,
                data: { "npi-lookup-target": "firstNameInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-gray-100 cursor-not-allowed opacity-60" %>
            </div>

            <div>
              <label for="user_last_name" class="block text-sm font-medium text-gray-700 mb-2">
                Last Name <span class="text-red-500">*</span>
              </label>
              <%= f.text_field :last_name,
                autocomplete: "family-name",
                placeholder: "Doe",
                required: true,
                disabled: true,
                data: { "npi-lookup-target": "lastNameInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-gray-100 cursor-not-allowed opacity-60" %>
            </div>

            <div>
              <label for="user_name_prefix" class="block text-sm font-medium text-gray-700 mb-2">
                Name Prefix
              </label>
              <%= f.text_field :name_prefix,
                placeholder: "Dr., Mr., Ms., etc.",
                disabled: true,
                data: { "npi-lookup-target": "namePrefixInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-gray-100 cursor-not-allowed opacity-60" %>
            </div>

            <div>
              <label for="user_middle_name" class="block text-sm font-medium text-gray-700 mb-2">
                Middle Name
              </label>
              <%= f.text_field :middle_name,
                placeholder: "Middle name",
                disabled: true,
                data: { "npi-lookup-target": "middleNameInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-gray-100 cursor-not-allowed opacity-60" %>
            </div>

            <div>
              <label for="user_name_suffix" class="block text-sm font-medium text-gray-700 mb-2">
                Name Suffix
              </label>
              <%= f.text_field :name_suffix,
                placeholder: "Jr., Sr., III, etc.",
                disabled: true,
                data: { "npi-lookup-target": "nameSuffixInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-gray-100 cursor-not-allowed opacity-60" %>
            </div>

            <div>
              <label for="user_gender" class="block text-sm font-medium text-gray-700 mb-2">
                Gender
              </label>
              <%= f.select :gender,
                [["Select gender", ""], ["Male", "M"], ["Female", "F"], ["Other", "X"]],
                {},
                disabled: true,
                data: { "npi-lookup-target": "genderInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-gray-100 cursor-not-allowed opacity-60" %>
            </div>

            <div>
              <label for="user_phone" class="block text-sm font-medium text-gray-700 mb-2">
                Phone Number
              </label>
              <%= f.telephone_field :phone,
                autocomplete: "tel",
                placeholder: "+1 (555) 123-4567",
                disabled: true,
                data: { "npi-lookup-target": "phoneInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-gray-100 cursor-not-allowed opacity-60" %>
            </div>

            <div>
              <label for="user_title" class="block text-sm font-medium text-gray-700 mb-2">
                Professional Title
              </label>
              <%= f.text_field :title,
                placeholder: "e.g., President, Chief Medical Officer",
                disabled: true,
                data: { "npi-lookup-target": "titleInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-gray-100 cursor-not-allowed opacity-60" %>
            </div>

            <div class="sm:col-span-2">
              <label for="user_official_credentials" class="block text-sm font-medium text-gray-700 mb-2">
                Credentials
              </label>
              <%= f.text_field :official_credentials,
                placeholder: "e.g., M.D., M.B.A.",
                disabled: true,
                data: { "npi-lookup-target": "credentialsInput" },
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-gray-100 cursor-not-allowed opacity-60" %>
            </div>
          </div>
        </div>

        <!-- Address Information -->
        <div class="border-b border-gray-200 py-4 sm:py-5 hidden" data-npi-lookup-target="addressSection">
          <h2 class="text-sm sm:text-base font-semibold text-gray-900 mb-3 sm:mb-4">Address Information</h2>
          <p class="text-xs sm:text-sm text-gray-500 mb-4">Addresses from NPI Registry (for reference only)</p>

          <div class="space-y-4">
            <!-- Mailing Address -->
            <div data-npi-lookup-target="mailingAddressContainer" class="hidden">
              <h3 class="text-sm font-medium text-gray-700 mb-2">Mailing Address</h3>
              <div data-npi-lookup-target="mailingAddress" class="text-sm text-gray-600 whitespace-pre-line bg-gray-50 p-3 rounded-lg"></div>
            </div>

            <!-- Practice Address -->
            <div data-npi-lookup-target="practiceAddressContainer" class="hidden">
              <h3 class="text-sm font-medium text-gray-700 mb-2">Practice Address</h3>
              <div data-npi-lookup-target="practiceAddress" class="text-sm text-gray-600 whitespace-pre-line bg-gray-50 p-3 rounded-lg"></div>
            </div>

            <!-- Location Address -->
            <div data-npi-lookup-target="locationAddressContainer" class="hidden">
              <h3 class="text-sm font-medium text-gray-700 mb-2">Location Address</h3>
              <div data-npi-lookup-target="locationAddress" class="text-sm text-gray-600 whitespace-pre-line bg-gray-50 p-3 rounded-lg"></div>
            </div>
          </div>
        </div>

        <!-- NPI Details -->
        <div class="border-b border-gray-200 py-4 sm:py-5 hidden" data-npi-lookup-target="npiDetailsSection">
          <h2 class="text-sm sm:text-base font-semibold text-gray-900 mb-3 sm:mb-4">NPI Details</h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4 text-sm">
            <div>
              <span class="font-medium text-gray-700">NPI Type:</span>
              <span data-npi-lookup-target="npiType" class="text-gray-600 ml-2"></span>
            </div>
            <div>
              <span class="font-medium text-gray-700">Status:</span>
              <span data-npi-lookup-target="npiStatus" class="text-gray-600 ml-2"></span>
            </div>
            <div>
              <span class="font-medium text-gray-700">Enumeration Date:</span>
              <span data-npi-lookup-target="enumerationDate" class="text-gray-600 ml-2"></span>
            </div>
            <div>
              <span class="font-medium text-gray-700">Last Updated:</span>
              <span data-npi-lookup-target="lastUpdated" class="text-gray-600 ml-2"></span>
            </div>
          </div>
        </div>

        <!-- Taxonomies & Specialties -->
        <div class="border-b border-gray-200 py-4 sm:py-5 hidden" data-npi-lookup-target="taxonomiesSection">
          <h2 class="text-sm sm:text-base font-semibold text-gray-900 mb-3 sm:mb-4">Taxonomies & Specialties</h2>
          <div data-npi-lookup-target="taxonomiesList" class="space-y-3"></div>
        </div>

        <!-- Other Identifiers -->
        <div class="border-b border-gray-200 py-4 sm:py-5 hidden" data-npi-lookup-target="identifiersSection">
          <h2 class="text-sm sm:text-base font-semibold text-gray-900 mb-3 sm:mb-4">Other Identifiers</h2>
          <div data-npi-lookup-target="identifiersList" class="space-y-3"></div>
        </div>

        <!-- Account Credentials -->
        <div class="border-b border-gray-200 py-4 sm:py-5">
          <h2 class="text-sm sm:text-base font-semibold text-gray-900 mb-3 sm:mb-4">Account Credentials</h2>

          <div class="mb-3 sm:mb-4">
            <label for="user_email" class="block text-sm font-medium text-gray-700 mb-2">
              Email <span class="text-red-500">*</span>
            </label>
            <%= f.email_field :email, autocomplete: "email", placeholder: "johndoe@example.com", required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
            <div>
              <label for="user_password" class="block text-sm font-medium text-gray-700 mb-2">
                Password <span class="text-red-500">*</span>
              </label>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
              <p class="text-xs sm:text-sm text-gray-500 mt-1">Minimum <%= @minimum_password_length || 8 %> characters</p>
            </div>

            <div>
              <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-2">
                Confirm Password <span class="text-red-500">*</span>
              </label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            </div>
          </div>
        </div>

        <!-- Terms and Conditions -->
        <div class="flex items-start pt-4 sm:pt-6">
          <div class="flex items-center h-5 flex-shrink-0">
            <input type="checkbox" id="terms" name="terms" required class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500">
          </div>
          <label for="terms" class="ml-3 text-xs sm:text-sm text-gray-600">
            I agree to the <a href="#" class="text-purple-600 hover:text-purple-700 font-medium">Terms of Service</a> and <a href="#" class="text-purple-600 hover:text-purple-700 font-medium">Privacy Policy</a>
          </label>
        </div>

        <!-- Submit Button -->
        <%= f.submit "Create Account", class: "w-full mt-4 sm:mt-6 bg-gray-900 text-white px-4 sm:px-6 py-3 sm:py-3.5 rounded-lg hover:bg-gray-800 active:bg-gray-950 font-semibold text-sm sm:text-base transition-colors cursor-pointer" %>
      <% end %>

      <!-- OR Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">Or sign up with</span>
        </div>
      </div>

      <!-- Google OAuth Button -->
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full flex items-center justify-center gap-3 bg-white border border-gray-300 text-gray-700 px-4 sm:px-6 py-3 sm:py-3.5 rounded-lg hover:bg-gray-50 active:bg-gray-100 font-semibold text-sm sm:text-base transition-colors" do %>
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span>Sign up with Google</span>
      <% end %>

      <p class="text-center text-gray-600 text-xs sm:text-sm mt-4 sm:mt-6">
        Already have an account?
        <%= link_to "Sign in here", new_session_path(resource_name), class: "text-purple-600 hover:text-purple-700 font-semibold" %>
      </p>
    </div>
  </div>
</div>
